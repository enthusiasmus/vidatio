// helper function
opacity(n)
    opacity n
    filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

#file-read
    margin 10px auto 0px
    h2
        text-align center
        margin 10px
    .row
        .area
            height 254px
            border-top 3px solid #11ddc6
    #option-browse-filesystem
        cursor pointer
    #option-empty-table
        margin-right 13px
    #option-browse-data
        margin-left 13px
    .text
        padding 10px
        font-size 18px
    .option-icon
        width 100px
        margin 50px auto 0px auto
        height 100px
        font-size 75px
        color #333
        text-align center
    #drop-zone
        display none
        position fixed
        width 100%
        height 100%
        background rgba(18, 221, 201, 0.8)
        top 0
        left 0
        z-index 999
        .col-sm-12
            padding 30px
            height 100%
        .area
            width 100%
            height 100%
            background none
            border 10px solid white
            -webkit-box-sizing border-box
            -moz-box-sizing border-box
            box-sizing border-box
            .glyphicon-plus
                position absolute
                top 50%
                left 50%
                margin-left -195px
                margin-top -225px
                font-size 35em
                color white
            .text
                position absolute
                top 50%
                left 50%
                margin-left -105px
                margin-top -35px
                font-size 30px
    .drop-area
        position fixed
        width 100%
        height 100%
        top 0
        left 0
        z-index 999999

    .row.other,
    .row.file-read
        margin-bottom 56px

    .file-read .area a,
    .other .area a
        width 100%
        height 100%
        display inline-block

@media (max-width: 768px)
    #file-read  #option-empty-table,
    #file-read  #option-browse-data,
    #file-read  #option-browse-filesystem,
    #file-read  #option-drag-and-drop,
    #file-read  #option-link
        margin: 0

#file-read  .file-read .area, #file-read .other .area
    background white
    -webkit-box-shadow 0px 2px 9px #e3e3e3
    -moz-box-shadow 0px 2px 9px #e3e3e3
    box-shadow 0px 2px 9px #e3e3e3
    text-align center

#file-read  .file-read .area a, #file-read  .other .area a
    color #000000

#file-read  #browse-filesystem, #input-browse-filesystem
    position relative

#option-browse-filesystem
    position relative

#input-browse-filesystem
    position absolute
    top 0px
    left 0px
    height 100%
    width 100%
    opacity 0
    z-index 2
    cursor pointer

#file-read  .file-read #option-browse-filesystem:hover,
#file-read  .other .area:hover
    background #ABF4E9

#link-submit-button
    top 0px

.form-link
    width 80%
    margin 0 auto

