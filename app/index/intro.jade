section#intro
    .wrapper-content
        .row
            .col-sm-12.slogan
                aside#slogan {{ "SLOGAN" | translate }}

        .row
            .col-sm-6.video-wrapper
                video.video-js(preload="auto" data-setup="{}")
                    source(src="videos/video.mp4", type="video/mp4")
                    source(src="videos/video.webm" type="video/webm")

            .col-sm-6
                h2.description
                    | {{ "ONLY_LANDING_PAGE" | translate }}
                    span.font-green-dark  {{ "THREE_STEPS_LANDING_PAGE" | translate }}
                    |  {{ "TO_YOUR_VIDATIO_LANDING_PAGE" | translate }}!

                ol
                    li.active.icon-import
                        span {{ "UPLOAD_FILE" | translate }}.
                    li.icon-edit
                        span {{ "GENERATED_AUTOMATICALLY" | translate }}.
                    li.icon-check
                        span {{ "SAVE_OR_SHARE" | translate }}.

                .get-started
                    //- generate link with correct language
                    a.bold-font.btn.btn-primary(ui-sref="app.import({ locale: locale })" title="{{ 'OPEN_IMPORT' | translate }} {{ 'OPEN' | translate }}")
                        | {{ "GET_LANDING_PAGE" | translate | uppercase }}
                        br
                        | {{ "STARTED_LANDING_PAGE" | translate | uppercase }}
                        span.bg-cyan !
