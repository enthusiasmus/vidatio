#landing-page

    h1
        margin-bottom 20px

    h2
        font-size 19px

    #intro
        padding 0 0 70px 0

        #slogan
            font-family Colaborate-Thin, $fonts
            font-size 24px
            margin-bottom 10px
            transform translate(45px, -40px)

        .diagram
            img
                width 100%
                box-shadow 2px 2px 2px 0px $color-shadow
                border-radius 4px

        .description
            margin-bottom 10px
            font-family Colaborate-Light, $fonts

            .font-green-dark
                font-family Colaborate-Bold, $fonts
                font-size 21px

        ol
            counter-reset li-counter
            list-style-type none
            margin 0
            padding 0

            > li
                position relative
                margin 0 0 15px 50px
                font-size 18px

                &.active
                    &:before
                        background-color $color-green

                &:before
                    position absolute
                    top 2px
                    left -50px
                    width 36px
                    height 36px
                    line-height 36px
                    border-radius 50%
                    background-color $color-grey-dark
                    color $color-white
                    text-align center
                    font-size 22px

                &:first-child
                    &:before
                        font-size 24px

                span
                    top 6px
                    position relative

        .get-started
            position absolute
            width 175px
            right 170px
            bottom -80px
            transform rotate(-10deg)

            a
                width inherit
                padding 10px
                font-size 30px
                text-align center
                display inline-block
                line-height 30px
                border-radius 5px

                &:visited
                    color $color-white

                span
                    position absolute
                    width 50px
                    top -20px
                    right -15px
                    display inline-block
                    transform rotate(10deg)
                    font-size 50px
                    padding-top 15px
                    padding-bottom 15px
                    border-radius 5px
        .promo
            .video
                width 100%
                padding 20px
                background $color-white
                border-top 3px solid $color-green
                box-shadow -1px 1px 6px $color-shadow

                img
                    width 100%

    #usp
        color $color-white
        padding 0 0 50px
        background url(../images/dotgrid.png) $color-grey-dark
        overflow hidden
        width 100%

        .row
            margin-top 40px

            div
                text-align center

            p
                line-height 20px

            .usp-icon
                font-size 90px

            .icon-2clicks
                font-size 100px
                margin-top -6px
                height 164px

    #featured-vidatios
        padding 50px 0 72px

        img.featured
            width 100%
            -webkit-box-shadow 2px 2px 2px 0px $color-shadow
            -moz-box-shadow 2px 2px 2px 0px $color-shadow
            box-shadow 2px 2px 2px 0px $color-shadow
            border-radius 4px

        div
            font-family Colaborate-Medium, $fonts
            margin-top 10px

        a
            color $color-grey-dark
            &:hover
                color $color-green

        .browse
            text-align center
            margin-top 30px

            a
                color $color-white

                .browse-icon
                    margin-left 5px
                    font-size 14px

    #popular-categories
        padding-top 50px
        min-height 500px

        /* first image is in the foreground, second image in the background*/
        background url(../images/placeholder-students.jpg) no-repeat
        width 100%

        .viz-container
            position relative
            height 380px

            #bubble-categories
                height 380px
                width 994px
                margin-top -30px

    #press
        padding-top 50px

        h1
            margin-bottom 30px

        .items
            text-align center

            img
                height 120px
                display block
                margin auto
                padding 10px

            h3
                color $color-grey-dark
                margin-bottom 30px
                line-height 20px

@media(max-width: 400px)
    #landing-page #intro #slogan
        transform none

@media(max-width: 767px)
    .app-view
        padding-bottom 140px

    #landing-page
        h1
        h2
            margin 0 20px 30px

        #intro
            .row
                .slogan
                    height 10px

                .promo
                    margin-top 20px

                .description
                    margin-top 20px

                ol
                    margin 0 20px

            .get-started
                position relative
                top 40px
                right 0
                left calc(50% - 90px)

        #usp
            p
                margin 0 20px

        #featured-vidatios
            a
                div
                    margin 10px 20px

@media(max-width: 850px)
    #landing-page #intro
        padding 0 0 100px 0

@media(min-width: 768px) and (max-width: 960px)
    #landing-page #intro .get-started
        bottom -80px
        right 100px

@media(min-width: 768px) and (max-width: 991px)
    #landing-page #press h3
        height 40px

