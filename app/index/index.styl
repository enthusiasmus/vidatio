#index
    #intro
        margin-bottom 50px

        h3
            text-transform uppercase

        .font-green-dark
            font-family Colaborate-Bold, $fonts
            font-size 24px

        ol
            counter-reset li-counter
            list-style-type none
            margin 10px 0
            padding 0

            li
                position relative
                margin 0 0 10px 50px

                &.active
                    &:before
                        background-color $color-green

                &:before
                    position absolute
                    left -50px
                    width 36px
                    height 36px
                    line-height 36px
                    border-radius 50%
                    background-color $color-grey-dark
                    color $color-white
                    text-align center
                    font-size 22px

                span
                    line-height 36px
                    vertical-align middle

    #usp
        color $color-white
        padding 50px
        background url(../images/dotgrid.png) $color-grey-dark
        overflow hidden
        width 100%
        text-align center

        .usp-icon
            font-size 90px

            .icon-2clicks
                font-size 100px
                height 164px

        h1
            margin-bottom 20px

    #newest-vidatios
        padding 50px

        h1
            margin-bottom 20px

        .img-container
            box-shadow -1px 1px 6px $color-shadow
            background $color-white
            padding 0 10px
            border-radius 4px

            img.newest
                width 100%
                position relative
                top 50%
                -webkit-transform translateY(-50%)
                -ms-transform translateY(-50%)
                transform translateY(-50%)

            img.placeholder
                height 50%
                opacity 0.4

        .title
            margin-top 20px
            text-align center

        .browse
            text-align center
            margin-top 30px

            .browse-icon
                margin-left 5px
                font-size 14px

    #popular-categories
        padding 50px
        min-height 500px
        background url(../images/kategorien-overlay.svg) no-repeat scroll 50% 50%, url(../images/placeholder-students.jpg)
        width 100%

    #press
        padding 50px 50px 20px 50px

        h1
            margin-bottom 30px

        .items
            text-align center

            img
                height 120px
                display block
                margin auto
                padding 10px

@media(max-width: 400px)
    #index #intro #slogan
        transform none

@media(max-width: 767px)
    #index
    #profile
        #intro
            .row
                .slogan
                    height 10px

                .promo
                    margin-top 20px

            .description
                margin-top 20px

            ol
                margin 0 20px

        .get-started
            position relative
            top 40px
            right 0
            left calc(50% - 90px)

        #usp
            p
                margin 0 20px

        #newest-vidatios
            .img-container
                width 80%
                margin 0 auto
                height 45vw

                img.newest
                    max-height 44vw

            .title
                margin-bottom 30px
                font-size 20px

        #popular-categories
            /* first value concerns always the foreground image, the last value always the background image */
            background-size 95%, cover

@media(min-width: 768px)
    #index #newest-vidatios
        .title
            font-size 16px

@media(max-width: 850px)
    #index #intro
        padding 0 0 100px 0

@media(min-width: 768px) and (max-width: 960px)
    #index #intro .get-started
    #profile .get-started
        bottom -80px
        right 100px

@media(min-width: 768px) and (max-width: 991px)
    #intro #press h3
        height 40px

    #index #newest-vidatios
        .img-container
            height 19vw

        img.newest
            max-height 18vw

@media(min-width: 768px) and (max-width: 1100px)
    #intro #popular-categories
        background-size 90%, cover

@media(min-width: 992px)
    #index #newest-vidatios
        .img-container
            height 190px

            img.newest
                max-height 180px

        .title
            font-size 16px
