doctype html
html
    head
        title Animals WebApp
        //- must be replaced in production
        base(href="/")
        link(rel="stylesheet", href="/css/bootstrap.css")
        link(rel="stylesheet", href="/css/bootstrap-theme.css")
        style
            | body { padding-top: 70px; }
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")


    body(ng-app="app", ng-controller="AppCtrl")
        div.lock-screen.ng-cloak(ng-show="progressService.screenLocked")
            .progress-wrapper
                .spinner
                    .content
                        p Animals
                progress-arc-mask
        div.clearfix.navbar.navbar-default.navbar-fixed-top(role="navigation")
            progressbar.progress-striped.active(value=100, type="indeterminate", ng-show="progressService.indeterminateLoading")
            div.container
                div.navbar-header
                    a.navbar-brand(href="") Animals
                    button.navbar-toggle.collapsed(type="button",
                            data-toggle="collapse",
                            data-target=".navbar-collapse")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li(ng-class="{active : state.current.name == 'home'}")
                            a(ui-sref="home", navbar-collapse) Home
                        li.ng-cloak(ng-class="{active : state.current.name != 'home'}",
                            ng-show="userService.user.name != ''")
                            a(ui-sref="penguins", navbar-collapse) Penguins

                    div.navbar-right
                        ul.nav.navbar-nav
                            li(ng-show="userService.user.name != ''")
                                a.ng-cloak(href="", navbar-collapse,
                                    ng-click='logout()')
                                        | Logout

        .container(ui-view)

        //- following scripts must be replaced in production!
        script(src="/js/app.js")
        script(src="/js/bootstrap.js")
