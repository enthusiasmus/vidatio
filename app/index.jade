doctype html
html(ng-app='vidatio')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Vidatio
    link(rel='stylesheet', href='bower_components/handsontable/dist/handsontable.full.css')
    link(href='../css/font-awesome.css', rel='stylesheet')
    link(href='../css/bootstrap.min.css', rel='stylesheet')
    link(href='assets/css/icons.css', rel='stylesheet')
    link(rel='stylesheet', href='../css/main.css')
    link(rel='stylesheet', href='../css/index.css')
  body.container-fluid
    header
      .row
        #line-right.col-xs-6
        #line-left.col-xs-6
      div
        #navigation.row
          .col-xs-6.logo
            a(href='#')
              #logo
          .col-xs-6.menu-buttons
            a#menu.icon-profile(href='#')
            a#user.icon-hamburger(href='#')
    section#intro
      .content
        .row
          .col-sm-12
            aside.slogan.light-font Hier steht der Slogan.
        .row
          .col-sm-7.diagram
            img(src='assets/img/placeholder-diagram.png', alt='placeholder')
          .col-sm-5.promo
            .video awesome promo video here!
            div
              p.description.bold-font
                | In nur
