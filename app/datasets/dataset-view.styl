#dataset-view
    .visualization-container
    .gallery-container
        text-align center
        vertical-align middle
        width 100%
        height 350px
        line-height 350px
        background $color-white
        margin-top 20px
        box-shadow 2px 2px 2px 0px $color-shadow
        border-radius 4xp

    .visualization-container
        margin-top 20px

        img
            width 100%
            height 90%

    .gallery-container
        margin 50px 0

    .middle
        text-align center

    .buttons-below-visualization
    .buttons-below-gallery
        margin-right -15px
        margin-left -15px

        #edit-dataset
        #share-dataset
        #download-dataset
        #link-dataset
        #code-dataset
        #metadata-dataset
            width 120px


        #download-dataset
            position relative
            cursor pointer
            margin 0 auto

            & > a
                display block
                width 120px

            ul
                background $color-white none repeat scroll 0 0
                border 2px solid $color-green
                display none
                position absolute
                width 120px
                list-style outside none none
                padding 0
                margin-top 12px
                border-radius 4px
                z-index 300

                &::after
                    border-color transparent transparent $color-white transparent
                    border-style solid
                    border-width 10px
                    content ""
                    left 48px
                    position absolute
                    top -20px
                    z-index 1000

                li
                    display block
                    position relative
                    z-index 301

                    &:first-child
                        border-bottom 2px solid $color-green

                        &::before
                            border-color transparent
                            border-style solid
                            border-width 11px
                            content ""
                            left -2px
                            position absolute
                            top -20px
                            z-index 1001
                            width 120px

                        &::after
                            border-color transparent transparent $color-green transparent
                            border-style solid
                            border-width 11px
                            content ""
                            left 47px
                            position absolute
                            top -24px
                            z-index 1001

                    & > a
                        color $color-black
                        position relative
                        text-decoration none
                        white-space nowrap
                        z-index 302
                        line-height 30px
                        font-size 16px
                        font-weight 700

                    &:hover
                        & > a
                            color $color-green

            &:hover
                & > ul
                    display block

                & > a
                    background-color $color-hover-dark

    .buttons-below-visualization
        margin-top -20px

    .buttons-below-gallery
        margin-top 30px
        margin-bottom 50px

    a.button
        width 132px

    .metadata-container
        margin-bottom 20px

        .space
            margin 15px 0

        .one-row
            display flex
            flex-direction row

            .description
                margin 20px 0

            .text
                font-weight bold
                width 250px






@media (max-width: 767px)
    #dataset-view
        .buttons-below-visualization
        .buttons-below-gallery
            #edit-dataset
            #share-dataset
            #download-dataset
            #link-dataset
            #code-dataset
            #metadata-dataset
                width 100px
                font-size 13px

        .dataset-title
            margin-top 30px

@media (min-width: 768px) and (max-width: 1012px)
    #dataset-view
        .dataset-title
            margin-left 30px
