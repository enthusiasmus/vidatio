#dataset-view
    .visualization-container
    .gallery-container
        text-align center
        vertical-align middle
        width 100%
        height 350px
        line-height 350px
        background $color-white
        margin-top 20px
        box-shadow 2px 2px 2px 0px $color-shadow
        border-radius 4xp

    .visualization-container
        margin-top 20px

    .gallery-container
        margin 50px 0

    .middle
        text-align center

    .buttons-below-visualization
    .buttons-below-gallery
        margin-right -15px
        margin-left -15px

        button
            width 120px

    .buttons-below-visualization
        margin-top -20px

    .buttons-below-gallery
        margin-bottom 50px

    a.button
        width 132px

    .metadata-container
        .one-row
            display flex
            flex-direction row

        .text
            font-weight bold
            width 200px



@media (max-width: 767px)
    #dataset-view
        .buttons-below-visualization
        .buttons-below-gallery
            button
                width 100px
                font-size 13px

        .dataset-title
            margin-top 30px

@media (min-width: 768px) and (max-width: 1012px)
    #dataset-view
        .dataset-title
            margin-left 30px
