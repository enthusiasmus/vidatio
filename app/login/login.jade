#login

    form(name="loginForm" ng-submit="logon()" ng-controller="LoginCtrl")
        .row
            .col-xs-12
                .input-group.form-group(ng-class="{ 'has-error' : loginForm.name.$invalid && !loginForm.name.$pristine }")
                    span.input-group-addon.fui-user
                    input.form-control(type="name" name="name" ng-model="user.name" placeholder="{{ 'USERNAME' | translate }} / {{ 'EMAIL' | translate }}" required ng-minlength=3 ng-maxlength=128)
                span.error(ng-show="loginForm.name.$invalid && !loginForm.name.$pristine && !loginForm.name.$error.uniqueness") Kein g√ºltiger Benutzername!
        .row
            .col-xs-12
                .input-group.form-group(ng-class="{ 'has-error' : loginForm.password.$invalid && !loginForm.password.$pristine }")
                    span.input-group-addon.fui-lock
                    input.form-control(type="password" ng-model="user.password" name="password" placeholder="{{ 'PASSWORD' | translate }}" required ng-minlength=8 ng-maxlength=128)

        .row
            .col-xs-12.middle
                button.btn.btn-block.btn-primary(type="submit" ng-disabled="loginForm.$invalid || loginForm.$pending") {{ 'LOG_ON' | translate }}

    .row
        .col-xs-6.left
            a.inverse(href="#") {{ 'FORGOT_PASSWORD' | translate }}?
        .col-xs-6.right
            a.inverse(ui-sref="app.registration({ locale: locale })") {{ 'REGISTER' | translate }}
