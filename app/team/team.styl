#team
	padding 70px 0 40px
	.row
		margin-bottom 75px

		&.other
			.col-sm-4
				&:first-child
					margin-left 15%

		.img-and-text-wrapper
			text-align center
			margin 0

			img
				width 100%
				max-width 500px
				height auto
				border-radius 100%
				padding 0 15px
				&:hover
					transition opacity opacity 1s linear

			h3
				display block
				padding 30px 0 0
				font-size 21px
				font-family Colaborate-Light, $fonts
				text-transform uppercase

			h4
				font-family Colaborate, $fonts
				padding 7px 0 3px
				font-size 15px
				display block

			p
				{lightText}
				margin 0 auto
				width 85%

			a
				color $color-green
				&:hover
					color $color-hover-dark

#team-all
	color $color-white
	padding 60px 0
	background url(../images/dotgrid.png) $color-grey-dark
	overflow hidden
	width 100%
	text-align center

	h1
		margin-bottom 20px

	h2
		border-bottom 3px solid $color-red-light
		padding-bottom 3px
		margin 50px 0 10px

	ul
		padding-left 0
		margin-bottom 0
		li
			list-style-type none

#team-photo
	padding-top 50px
	min-height 700px
	background url(../images/vidatio-team-all.jpg) no-repeat scroll 50% 50%
	width 100%

#team-photo-caption
	background-color $color-overlay
	height auto
	margin-top 20px
	padding 10px 10px

	p
		{lightText}
		text-align center
		height auto
		margin-bottom 0
		padding-bottom 3px

@media(max-width: 767px)
	#team
		.row
			margin-bottom 0
			&.other
				.col-sm-4
					margin-bottom 50px

					&:first-child
						margin-left 0
			.img-and-text-wrapper
				p
					margin-bottom 100px
	#team-photo
		background-size auto 100%
		min-height 400px
	#team-photo-caption
		margin-top 0
		width 100%
		height auto
		p
			min-height 110px
