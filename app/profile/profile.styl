#profile.wrapper-content

    .area
        padding 30px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 auto 40px auto
        color $color-grey-dark

    .has-link
        padding-top 5px
        text-align center

        button
            width 200px

    h2
        display block
        margin-bottom 15px

    li
        list-style-type none

@media(max-width: 767px)
    .vidatio
        a.img
            height 43vw

        img
            max-height 41vw

@media(min-width: 768px) and (max-width: 991px)
    #profile
        .vidatio
            a.img
                height 26vw

            img
                max-height 24vw
