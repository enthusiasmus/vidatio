#profile.wrapper-content
    .row.cards
        width calc(100% + 30px)
        margin-left -15px

    .area
        padding 30px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 auto 40px auto
        color $color-grey-dark

    .has-link
        padding-top 5px
        text-align center

        button
            width 200px

    h3
        margin-bottom 15px

    li
        list-style-type none

    .no-vidatios .same-height
        margin 10px 0

        .no-vidatios-text
            padding-top 10px

        .no-vidatios-text p
            text-align center

        .get-started
            bottom 0
            margin-top 25px
            margin-bottom 15px

@media (max-width: 550px)
    #profile
        vidatio
            img
                height 30vw !important

@media (min-width: 551px) and (max-width: 767px)
    #profile
        vidatio
            img
                height 33vw !important

@media (min-width: 768px) and (max-width: 991px)
    #profile
        vidatio
            img
                height 20vw !important
