#profile.wrapper-content
    .row.cards
        width calc(100% + 30px)
        margin-left -15px

    .area
        padding 30px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 auto 40px auto
        color $color-grey-dark

    .has-link
        padding-top 5px
        text-align center

        button
            width 200px

    h2
        display block
        margin-bottom 15px

    li
        list-style-type none

    .no-vidatios .same-height
        margin: 10px 0
        p
            text-align center

        .get-started
            bottom 0
