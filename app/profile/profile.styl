#profile.wrapper-content

    .area
        padding 30px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 auto 40px auto
        color $color-grey-dark

    .has-link
        padding-top 5px
        text-align center

        button
            width 200px

    h2
        display block
        margin-bottom 15px

    li
        list-style-type none

    .vidatios > .row
        margin-left -15px
        margin-right -15px

    .vidatio
        img
            padding-bottom 20px
            background-color $color-white

        .text
            margin-top -15px

    #create-vidatio
        position relative
        top -20px
        height 40px
        width 90%
        margin 0 auto
        line-height 40px

        &:before
            font-size 20px

        span
            position relative
            top -1px
