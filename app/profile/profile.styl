#profile.wrapper-content
    .row.cards
        width calc(100% + 30px)
        margin-left -15px

    .area
        padding 30px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 auto 40px auto
        color $color-grey-dark

    .has-link
        padding-top 5px
        text-align center

        button
            width 200px

    h3
        margin-bottom 15px

    li
        list-style-type none

    .no-vidatios .same-height
        margin: 10px 0

        .no-vidatios-text
            position relative
            top 50%
            transform translateY(-50%)

            p
                text-align center
                margin-bottom 0

        .get-started
            bottom 0
            margin-top 25px
            margin-bottom 15px
