#profile.wrapper-content

    min-width 400px

    .row .col-md-12 .area
        padding 30px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 auto 40px auto
        color $color-grey-dark

    .vidatios .row
        margin: 0 -15px

    .vidatios h3
        margin-bottom 20px

    .col-xs-12.has-link
        padding-top 20px
        text-align center

        button
            width 200px

    .vidatio
        margin-bottom 20px
        background #F2F2F2
        border-top 3px solid $color-green
        box-shadow $box-shadow-size $color-shadow

        .img
            background #F2F2F2
        .text
            background #E5E5E5
            padding 10px
        h4, img
            width 100%
        h4
            height 40px
        p
            height 40px
            line-height 1
            font-size 16px
        a
            display block
            padding 0 5px
            width 100%
            text-align right
            color $color-grey-dark

            &:hover
                color $color-green
