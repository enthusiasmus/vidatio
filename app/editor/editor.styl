#editor
    max-width 98%

    //editable title input-field
    .title
        text-align center
        width 98%
        margin 25px 1%
        position relative

        input
            min-width 240px
            max-width 100%
            border none
            display inline-block
            font-family Colaborate-Thin, $fonts
            font-size 30px
            height 35px
            line-height 33px
            padding 0 2px
            text-align center
            overflow hidden
            text-overflow ellipsis
            background none

            &:focus
            &:hover
            &:active
                outline-color $color-green
                outline-style auto

    .underline-title
        border-bottom 3px solid $color-red-light
        min-width 240px
        max-width 100%
        margin 0 auto

    .editor-panel
        display block
        height 40px
        margin 0 auto 2px
        width 60%

        .tab
            background-color $color-passive
            font-size 18px
            float left
            height 38px
            line-height 38px
            margin-top 4px
            text-align center
            width 29%
            border-top-left-radius 3px
            border-top-right-radius 3px
            box-shadow 0 0 10px $color-shadow

            //long text in tab needs more width
            &.middle
                width 40%
                margin 4px 1% 0 1%

            &.active
                background-color $color-green
                font-family Colaborate-Medium, $fonts
                height 42px
                line-height 46px
                box-shadow 0 0 10px $color-table-odd-active
                margin-top 0

                &:hover,
                &:focus
                    background-color $color-green

            &:hover,
            &:focus
                background-color $color-hover-dark
                color $color-white

    .row
        height calc(100vh - 250px)
        min-height 400px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 15px

    .content
        height calc(100vh - 250px)
        min-height 400px
        padding 10px 5px 20px 5px
        margin-bottom 30px
        line-height 1.3

        .settings-bar
            height 40px
            margin-bottom 10px
            border-radius 10px

            .download-button
                float right
                height 40px
                width 40px
                z-index 300
                position relative
                cursor pointer
                padding 2px

                & > a
                    border-radius 4px
                    display block
                    height 36px
                    overflow hidden
                    width 36px

                .icon-download-3
                    font-size 24px
                    text-align center
                    color $color-black
                    line-height 36px

                ul
                    background $color-white none repeat scroll 0 0
                    border 2px solid $color-green
                    display none
                    position absolute
                    width 50px
                    left -5px
                    text-align center
                    list-style outside none none
                    padding 0
                    margin-top 12px
                    border-radius 4px

                    &::after
                        border-color transparent transparent $color-white transparent
                        border-style solid
                        border-width 10px
                        content ""
                        left 14px
                        position absolute
                        top -20px
                        z-index 1000

                    li
                        display block
                        position relative
                        z-index 301

                        &:first-child
                            border-bottom 2px solid $color-green

                            &::before
                                border-color transparent
                                border-style solid
                                border-width 6px
                                content ""
                                left -2px
                                width 50px
                                position absolute
                                top -12px
                                z-index 1001

                            &::after
                                border-color transparent transparent $color-green transparent
                                border-style solid
                                border-width 11px
                                content ""
                                left 13px
                                position absolute
                                top -24px
                                z-index 1001

                        & > a
                            color $color-black
                            position relative
                            text-decoration none
                            white-space nowrap
                            z-index 302
                            line-height 30px
                            font-size 16px
                            font-weight 700

                        &:hover
                            & > a
                                color $color-green

                &:hover
                    & > ul
                     display block

                    & > a
                        background-color $color-hover-light

    .wrapper-content
        max-width 100%

@media (max-width: 767px)
    #editor
        margin-bottom 30px

        .editor-panel
            width 90%
            height 80px

            .tab
                font-size 16px
                display inline-block
                margin-top 2px
                width 49.5%
                float none

                &:first-child
                    margin-right 1%

                &.middle
                    float right
                    width 100%
                    margin 2px 0

        .row
            height 100%
            margin-bottom 40px

@media (min-width: 768px) and (max-width: 990px)
    #editor
        .row
            height 100%

        .editor-panel
            .tab
                font-size 16px
                line-height 40px

                &.middle
                    line-height 20px !important
                    padding-top 1px

                    &.active
                        padding-top 3px

@media(min-width: 991px) and (max-width: 1079px)
    #editor
        .editor-panel
            .tab
                font-size 15px

@media(min-width: 1080px) and (max-width: 1200px)
    #editor
        .editor-panel
            .tab
                font-size 17px
