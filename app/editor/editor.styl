#editor
    max-width 98%

    .editor-panel
        display block
        height 40px
        margin 0 auto 2px
        width 60%

        .tab
            background-color $color-passive
            float left
            height 38px
            line-height 42px
            margin-top 4px
            text-align center
            width 29%
            border-top-left-radius 3px
            border-top-right-radius 3px
            box-shadow 0 0 10px $color-shadow

            //long text in tab needs more width
            &.middle
                width 40%
                margin 4px 1% 0 1%

            &.active
                background-color $color-green
                font-family Colaborate-Medium, $fonts
                height 42px
                line-height 46px
                box-shadow 0 0 10px $color-table-odd-active
                margin-top 0

                &:hover,
                &:focus
                    background-color $color-green

            &:hover,
            &:focus
                background-color $color-hover-dark
                color $color-white

    .row.editor-content
        height calc(100vh - 260px)
        min-height 400px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 15px

        .seperator
            visibility hidden

            &.active
                background $color-shadow
                visibility visible

        #datatable
            height calc(100% - 50px) /* -50px according to the settings-bars' height */

        #datatable
        #chart
        .angular-leaflet-map
        #chart-placeholder
            width 100% !important
            overflow hidden
            font-size 14px

            a
                font-size 14px

    .content
        height calc(100vh - 260px)
        min-height 400px
        padding 15px 5px 20px 5px
        line-height 1.3

        .settings-bar
            height 52px
            display flex
            flex-direction row
            display -webkit-flex /* Safari */
            -webkit-flex-direction row

            .settings-button
                text-align center
                margin-right 25px

                &:last-child
                    margin-right 0px

                a
                    font-size 24px
                    display block
                    color $color-black

                span
                    display block
                    text-transform uppercase
                    position relative
                    color inherit
                    font-size 10px
                    font-family Colaborate,Arial,Helvetica,sans-serif

                &:hover
                &.active
                    > a
                        color $color-hover-dark

                &:last-child
                    margin-left auto

    .wrapper-content
        max-width 100%

@media (max-width: 767px)
    #editor
        margin-bottom 30px

        .editor-panel
            width 90%
            height 80px

            .tab
                display inline-block
                margin-top 2px
                width 49.5%
                float none

                &:first-child
                    margin-right 1%

                &.middle
                    float right
                    width 100%
                    margin 2px 0

        .row.editor-content
            height 100%
            margin-bottom 40px

@media (min-width: 768px) and (max-width: 946px)
    #editor
        .editor-panel
            width 80%

@media (min-width: 947px) and (max-width: 955px)
    #editor
        .editor-panel
            .tab
                &.middle
                    line-height 40px !important

                    &.active
                        line-height 40px !important

@media (min-width: 956px) and (max-width: 982px)
    #editor
        .editor-panel
            .tab
                &.middle
                    &.active
                        line-height 20px !important

@media (min-width: 768px) and (max-width: 991px)
    #editor
        .row.editor-content
            height 100%

        .editor-panel
            .tab
                line-height 40px

                &.middle
                    &.active
                        padding-top 3px

@media(min-width: 990px) and (max-width: 1125px)
    #editor
        .editor-panel
            .tab
                &.middle
                    &.active
                        line-height 20px

@media(max-width: 991px)
    #editor
        .row.editor-content
            .seperator
                height 2px
                width calc(100% - 10px)
                margin -15px 5px 15px

            #table
                .content
                    &.active
                        margin-bottom 30px

@media(min-width: 992px)
    #editor
        .row.editor-content
            display flex
            flex-direction row

            .col-md-6
                width calc(50% - 1px)

            .seperator
                height calc(100% - 10px)
                width 2px
                margin 5px 0
