#editor
    max-width 98%

    //editable title input-field
    .title
        text-align center
        width 98%
        margin 5px 1% 15px
        position relative

        #vidatio-title
            border none
            border-bottom 3px solid $color-red-light
            font-size 22px
            min-width 100px
            width 138px
            max-width 100%
            display inline-block
            font-family Colaborate-Regular, $fonts
            height 30px
            line-height 23px
            padding 0 2px
            text-align center
            overflow hidden
            text-overflow ellipsis
            background none

            &:focus
            &:hover
            &:active
                outline-color $color-green
                outline-style auto

    .editor-panel
        display block
        height 40px
        margin 0 auto 2px
        width 60%

        .tab
            background-color $color-passive
            font-size 18px
            float left
            height 38px
            line-height 38px
            margin-top 4px
            text-align center
            width 29%
            border-top-left-radius 3px
            border-top-right-radius 3px
            box-shadow 0 0 10px $color-shadow

            //long text in tab needs more width
            &.middle
                width 40%
                margin 4px 1% 0 1%

            &.active
                background-color $color-green
                font-family Colaborate-Medium, $fonts
                height 42px
                line-height 46px
                box-shadow 0 0 10px $color-table-odd-active
                margin-top 0

                &:hover,
                &:focus
                    background-color $color-green

            &:hover,
            &:focus
                background-color $color-hover-dark
                color $color-white

    .row
        height calc(100vh - 310px)
        min-height 400px
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin 0 15px

        .seperator
            background $color-shadow

        #datatable
        #chart
        .angular-leaflet-map
        #chart-placeholder
        .angular-leaflet-map
            height calc(100% - 50px) /* -50px according to the settings-bars' height + 20px margin */
            width 100% !important
            overflow hidden

    .content
        height calc(100vh - 310px)
        min-height 400px
        padding 10px 5px 20px 5px
        line-height 1.3

        .settings-bar
            height 50px
            display flex
            flex-direction row
            display -webkit-flex /* Safari */
            -webkit-flex-direction row

            & > div
                margin-left 10px

            p
                padding-top 7px
                font-size 14px

            .dropdown-toggle
                padding 3px 5px 3px 5px

            .download-button
                position relative
                right 0

                .download-icon
                    font-size 24px
                    text-align center
                    color $color-black
                    line-height 36px

                ul
                    background $color-white none repeat scroll 0 0
                    border 2px solid $color-green
                    display none
                    position absolute
                    width 50px
                    left -5px
                    text-align center
                    list-style outside none none
                    padding 0
                    margin-top 12px
                    border-radius 4px

                    &::after
                        border-color transparent transparent $color-white transparent
                        border-style solid
                        border-width 10px
                        content ""
                        left 14px
                        position absolute
                        top -20px
                        z-index 1000

                    li
                        display block
                        position relative
                        z-index 301

                        &:first-child
                            &::before
                                border-color transparent
                                border-style solid
                                border-width 6px
                                content ""
                                left -2px
                                width 50px
                                position absolute
                                top -12px
                                z-index 1001

                            &::after
                                border-color transparent transparent $color-green transparent
                                border-style solid
                                border-width 11px
                                content ""
                                left 13px
                                position absolute
                                top -24px
                                z-index 1001

                        & > a
                            color $color-black
                            position relative
                            text-decoration none
                            white-space nowrap
                            z-index 302
                            line-height 30px
                            font-size 16px
                            font-weight 700

                        &:hover
                            & > a
                                color $color-green
                &:hover
                    & > ul
                        display block

            .hover-button
                height 40px
                width 40px
                z-index 300
                cursor pointer
                padding 2px

                & > a
                    border-radius 4px
                    display block
                    width 36px
                    font-size 24px
                    text-align center
                    color $color-black
                    line-height 36px

                &:hover > a
                    background-color $color-hover-light

    .wrapper-content
        max-width 100%

@media (max-width: 767px)
    #editor
        margin-bottom 30px

        .editor-panel
            width 90%
            height 80px

            .tab
                font-size 16px
                display inline-block
                margin-top 2px
                width 49.5%
                float none

                &:first-child
                    margin-right 1%

                &.middle
                    float right
                    width 100%
                    margin 2px 0

        .row
            height 100%
            margin-bottom 40px

@media (min-width: 768px) and (max-width: 990px)
    #editor
        .row
            height 100%

        .editor-panel
            .tab
                font-size 16px
                line-height 40px

                &.middle
                    line-height 20px !important
                    padding-top 1px

                    &.active
                        padding-top 3px

@media (min-width: 768px) and (max-width: 1199px)
    #editor
        .title
            width 86% !important
            margin 5px 7% 15px !important

@media(min-width: 991px) and (max-width: 1079px)
    #editor
        .editor-panel
            .tab
                font-size 15px

@media(max-width: 991px)
    #editor
        .row
            .seperator
                height 2px
                width calc(100% - 10px)
                margin -15px 5px 15px

            #table
                .content
                    margin-bottom 30px

@media(min-width: 992px)
    #editor
        .row
            display flex
            flex-direction row

            .col-md-6
                width calc(50% - 1px)

            .seperator
                height calc(100% - 10px)
                width 2px
                margin 5px 0

        .content
            margin-bottom 30px

@media(min-width: 1080px) and (max-width: 1200px)
    #editor
        .editor-panel
            .tab
                font-size 17px
