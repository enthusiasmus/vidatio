#editor
    max-width 98%

    .content
        height calc(100vh - 228px)
        min-height 400px
        padding 10px 20px 20px 20px
        border-top 3px solid $color-red
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        margin-bottom 30px
        line-height 1.3

        .settings-bar
            height 40px
            margin-bottom 10px
            border-radius 10px

            .download-button
                float right
                height 40px
                width 40px
                z-index 300
                position relative
                cursor pointer
                padding 2px

                & > a
                    border-radius 4px
                    display block
                    height 36px
                    overflow hidden
                    width 36px
                    text-align center

                ul
                    background $color-white none repeat scroll 0 0
                    border 2px solid $color-green
                    display none
                    position absolute
                    width 50px
                    left -5px
                    text-align center
                    list-style outside none none
                    padding 0
                    margin-top 12px
                    border-radius 4px

                    &::after
                        border-color transparent transparent $color-white transparent
                        border-style solid
                        border-width 10px
                        content ""
                        left 14px
                        position absolute
                        top -20px
                        z-index 1000

                    li
                        display block
                        position relative
                        z-index 301

                        &:first-child
                            border-bottom 2px solid $color-green

                            &::before
                                border-color transparent
                                border-style solid
                                border-width 6px
                                content ""
                                left -2px
                                width 50px
                                position absolute
                                top -12px
                                z-index 1001

                            &::after
                                border-color transparent transparent $color-green transparent
                                border-style solid
                                border-width 11px
                                content ""
                                left 13px
                                position absolute
                                top -24px
                                z-index 1001

                        & > a
                            color $color-black
                            position relative
                            text-decoration none
                            white-space nowrap
                            z-index 302
                            line-height 30px
                            font-size 16px
                            font-weight 700

                        &:hover
                            & > a
                                color $color-green

                &:hover
                    & > ul
                        display block

                    & > a
                        background-color $color-hover-light

                .download-icon
                    color $color-black
                    margin-top 8px
                    font-size 24px

    .wrapper-content
        max-width 100%

    .editor-placeholder
        margin-bottom 30px
        padding 0 15px

        div
            box-shadow inset $box-shadow-size $color-shadow
            min-height 550px
            height calc(100vh - 248px)
            position relative

        img
            width 200px
            display inline-block
            opacity .4
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            margin auto


@media (max-width: 767px)
    #editor
        margin-bottom 30px
