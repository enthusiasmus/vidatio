.content
    height calc(100vh - 248px)
    min-height 550px
    padding 20px
    border-top 3px solid $color-red
    background $color-white
    box-shadow $box-shadow-size $color-shadow
    margin-bottom 30px
    line-height 1.3

#editor
    max-width 98%

    .wrapper-content
        max-width 100%

    .editor-placeholder
        margin-bottom 30px
        padding 0 15px

        div
            box-shadow inset $box-shadow-size $color-shadow
            min-height 550px
            height calc(100vh - 248px)
            position relative


        img
            width 200px
            display inline-block
            opacity .4
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            margin auto
