#visualization.wrapper-content(ng-controller="VisualizationCtrl" ng-show="$root.showVisualizationView" ng-class="{'col-md-6': $parent.activeViews === 2, 'col-md-12': $parent.activeViews === 1}")
    .content.height-500
        .settings-bar
            .axis-selection
                p {{ "X_AXIS" | translate }}
                select.btn.btn-default.dropdown-toggle(name="xAxisSelect" ng-model="xAxisCurrent")
                    option(ng-repeat="header in xAxisSelection" value="{{header}}") {{ header }}
                p {{ "Y_AXIS" | translate }}
                select.btn.btn-default.dropdown-toggle(name="yAxisSelect" ng-model="yAxisCurrent")
                    option(ng-repeat="header in yAxisSelection" value="{{header}}") {{ header }}

            #visualization-settings-container
                .download-button
                    a(href='#')
                    ul
                        li
                            a(ng-click='shareVisualization("png")') PNG

                        li
                            a(ng-click='shareVisualization("jpg")') JPG

        leaflet(geojson="geojson" id="map")
