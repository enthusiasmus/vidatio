#visualization

    #chart
        width 100%
        height calc(100% - 50px)

    .angular-leaflet-map
        height calc(100% - 50px) /* -50px according to the settings-bars' height + 20px margin */
        width 100%

        a:link, a:visited
            color $color-black

        .leaflet-bar a
            &:hover
                background-color $color-hover-light

    .leaflet-container
        a.leaflet-popup-close-button
            top 5px
            right 2px

            &:hover
                color $color-red !important

        .leaflet-popup-content-wrapper
            min-width 140px
            border-top 5px solid $color-red
            border-radius 0px

            .leaflet-popup-content
                padding-right 15px
                overflow-wrap break-word

                a:link, a:visited
                    color $color-active
                a:hover, a:active
                    color $color-black

        .leaflet-popup-tip
            width 20px
            height 20px

        path.leaflet-clickable
            stroke $color-passive
            stroke-opacity 1
            fill $color-green
            fill-opacity 0.25
            stroke-width 3px
            stroke-dasharray 5

    .axis-selection
        margin-top 5px
        p
            display inline-block

            &:last-of-type
                margin-left 15px

        ul
            max-height 500px
            overflow auto

        .btn-group
            display inline-block

        .btn
            min-width 20px

    .diagram-selection
        margin-top 1px

        li > a
            display flex
            flex-direction row
            font-size 16px

            .diagramm-icons
                font-size 28px
                margin-right 10px

            .diagramm-selection-text
                line-height 43px

    .graph-icon
        width 30px
        margin-right 10px
        margin-top 5px

    .download-button li:first-child
            border-bottom 2px solid $color-green

    .diagram-placeholder
        padding 0 0

        div
            box-shadow inset $box-shadow-size $color-shadow
            min-height 318px
            height calc(100vh - 310px)

        img
            width 120px
            display inline-block
            opacity .4
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            margin auto
