#visualization
    #chart
        input[id^="d3plus_"][id$="_inline_input"]
            position absolute
            padding 5px
            font-family Helvetica
            font-weight 200
            font-size 12px

        // this line is needed as d3-plus does not display its line properly after resizing the window when the user
        // enters more than one time the editor with a dataset
        g.d3plus_line
        g.d3plus_rect
            opacity 1 !important

    .angular-leaflet-map
        a:link, a:visited
            color $color-black

        .leaflet-bar a
            &:hover
                background-color $color-hover-light

    .leaflet-container
        a.leaflet-popup-close-button
            top 5px
            right 2px

            &:hover
                color $color-red !important

        .leaflet-popup-content-wrapper
            min-width 140px
            border-top 5px solid $color-red
            border-radius 0px

            .leaflet-popup-content
                padding-right 15px
                overflow-wrap break-word

                a:link, a:visited
                    color $color-active
                a:hover, a:active
                    color $color-black

        .leaflet-popup-tip
            width 20px
            height 20px

        path.leaflet-clickable
            stroke $color-passive
            stroke-opacity 1
            fill $color-green
            fill-opacity 0.25
            stroke-width 3px
            stroke-dasharray 5

    .settings-bar
        .recommend-button
            height 40px
            width  90px
            line-height 1
            position relative
            margin-left 40px
            padding 9px
            margin-top 4px

            .icon
                position absolute
                left -30px
                bottom 0
                width 40px
                height 40px
                border-radius 2px
                background inherit
                line-height 40px
                font-size 25px
                transform rotate(-15deg)
                transform-origin 0

            .text
                display block
                text-transform uppercase
                position relative
                font-size 12px
                white-space pre-wrap
                font-family Colaborate,Arial,Helvetica,sans-serif

        .diagram-menu
            justify-content space-around
            display none
            list-style-type none
            position absolute
            left 20px
            right 20px
            padding 0
            height 80px
            margin-top 8px
            background rgba($color-white, .9)
            border-top 2px solid $color-disabled-border
            box-shadow -1px 1px 2px #e3e3e3
            z-index 1100

            > li
                height 100%

                > a
                    padding 18px 12px
                    display block

                &:hover
                &.active
                    background $color-hover-light
                    box-shadow 0 -2px $color-green

            &:before
                content ''
                width 100%
                height 10px
                position absolute
                left 0
                right 0
                bottom 100%

        .diagram-menu
            > li
                width 20%

        .diagram-selection:hover
            .diagram-menu
                display flex

        .download-menu
            left 20px
            right 20px

            > li
                width 50%

    #chart-placeholder
        overflow hidden
        padding 0 0
        box-shadow inset 0 0 15px $color-shadow
        height 100%

        img
            width 120px
            display inline-block
            opacity .4
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            margin auto
