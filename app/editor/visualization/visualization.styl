#visualization
    .settings-bar
        .axis-selection
            p
                display inline-block

                &:last-of-type
                    margin-left 5px

            ul
                max-height 500px
                overflow auto
                z-index 1500

            .btn
                min-width 20px

        .diagram-selection
            padding-top 6px

            li > a
                display flex
                flex-direction row
                display -webkit-flex /* Safari */
                -webkit-flex-direction row
                font-size 16px

                .selection-icons
                    font-size 28px
                    margin-right 10px

                .selection-text
                    line-height 43px

            .trigger-recommender
                background $color-red-light
                border-top-right-radius 4px
                border-top-left-radius 4px

                a
                    color $color-black

        .color-selection a .angular-color-picker
            display none

            //bugfix angular-color-picker cursors
            .angular-color-picker > ._hues > ._cursor
                left -6px
                width 40px

        .color-selection a:hover .angular-color-picker
            display block

        .graph-icon
            width 30px
            margin-right 10px
            margin-top 5px

        .download-button li:first-child
            border-bottom 2px solid $color-green
