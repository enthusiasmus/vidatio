#visualization

    .settings-bar
        #visu-settings-container
            float right

        .save-button
            //background url(../images/back-to-import-placeholder.svg) no-repeat
            height 40px
            width 40px
            background red
            opacity 1.0
            z-index 2
            position relative
            transition opacity 0.5s ease-out 0s
            right 10px
            top -8px

            ul
                list-style outside none none
                padding 0
                margin 0

                li
                    display block
                    position relative
                    z-index 1

                    & > ul
                        background #fff none repeat scroll 0 0
                        border 1px solid #e2e2e2
                        display none
                        margin-top 14px
                        position absolute
                        width 40px

                    &:hover
                        & > ul
                            display block

                .save-main
                    & > a
                        background-color #fff
                        background-position center center
                        background-repeat ne-repeat
                        border-radius 18px
                        display block
                        height 36px
                        margin 8px 8px 0 10px
                        overflow hidden
                        padding 0
                        text-indent -1.33333e+7px
                        width 36px

                    ul
                        li
                            & > a
                                color blue
                                position relative
                                text-decoration none
                                white-space nowrap
                                z-index 2

                            &:hover
                                & > a
                                    color #fff
                                    background red


            & > ul
                & > li
                    & > ul
                        &::after
                            border-color transparent transparent red transparent
                            border-style solid
                            border-width 10px
                            content ""
                            left 10px
                            position absolute
                            top -21px
                            z-index 1000

                        & > li
                            &:first-child
                                & > a
                                    &::after
                                        border-color transparent transparent black transparent
                                        border-style solid
                                        border-width 11px
                                        content ""
                                        left 10px
                                        position absolute
                                        top -21px
                                        z-index 1001



.angular-leaflet-map
        height calc(100% - 60px) /* -60px according to the settings-bars' height + 20px margin */
        width 100%

        a:link, a:visited
            color $color-black

    .leaflet-container
        a.leaflet-popup-close-button
            top 5px
            right 2px

        .leaflet-popup-content-wrapper
            min-width 140px
            border-top 5px solid $color-red
            border-radius 0px

            .leaflet-popup-content
                padding-right 15px
                overflow-wrap break-word

                a:link, a:visited
                    color $color-active
                a:hover, a:active
                    color $color-black

        .leaflet-popup-tip
            width 20px
            height 20px

        path.leaflet-clickable
            stroke $color-passive
            stroke-opacity 1
            fill $color-green
            fill-opacity 0.25
            stroke-width 3px
            stroke-dasharray 5


