#visualization

    .settings-bar
        #visu-settings-container
            float right

        .save-button
            background url(../images/back-to-import-placeholder.svg) no-repeat
            height 40px
            width 40px

    .angular-leaflet-map
        height calc(100% - 60px) /* -60px according to the settings-bars' height + 20px margin */
        width 100%

        a:link, a:visited
            color $color-black

    .leaflet-container
        a.leaflet-popup-close-button
            top 5px
            right 2px

        .leaflet-popup-content-wrapper
            min-width 140px
            border-top 5px solid $color-red
            border-radius 0px

            .leaflet-popup-content
                padding-right 15px
                overflow-wrap break-word

                a:link, a:visited
                    color $color-active
                a:hover, a:active
                    color $color-black

        .leaflet-popup-tip
            width 20px
            height 20px

        path.leaflet-clickable
            stroke $color-passive
            stroke-opacity 1
            fill $color-green
            fill-opacity 0.25
            stroke-width 3px
            stroke-dasharray 5


