#visualization

    #chart
        width 100%
        height calc(100% - 50px)

    .angular-leaflet-map
        height calc(100% - 50px) /* -50px according to the settings-bars' height + 20px margin */
        width 100%

        a:link, a:visited
            color $color-black

        .leaflet-bar a
            &:hover
                background-color $color-hover-light

    .leaflet-container
        a.leaflet-popup-close-button
            top 5px
            right 2px

            &:hover
                color $color-red !important

        .leaflet-popup-content-wrapper
            min-width 140px
            border-top 5px solid $color-red
            border-radius 0px

            .leaflet-popup-content
                padding-right 15px
                overflow-wrap break-word

                a:link, a:visited
                    color $color-active
                a:hover, a:active
                    color $color-black

        .leaflet-popup-tip
            width 20px
            height 20px

        path.leaflet-clickable
            stroke $color-passive
            stroke-opacity 1
            fill $color-green
            fill-opacity 0.25
            stroke-width 3px
            stroke-dasharray 5

    div
        padding 2px 0px 2px 0px
        display inline-block

    .axis-selection

        p
            display inline-block

            &:last-of-type
                margin-left 15px

        ul
            max-height 500px
            overflow auto

        .btn-group
            display inline-block
        .btn
            min-width 20px

    .graph-icon
        width 30px
        margin-right 10px
        margin-top 5px
