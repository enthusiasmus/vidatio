#table
    .settings-bar
        margin-left 2px

        .header-button
            position relative
            margin-right 25px

            label
                margin 30px 0 0
                padding 0
                display block
                text-transform uppercase
                position relative
                color $color-black
                font-size 10px
                font-family Colaborate,Arial,Helvetica,sans-serif

            @-moz-document url-prefix()
                label
                    margin 31px 0 0

            .icons
                font-size 22px
                margin-top -26px
                left 9px

        .swap-axis-button
            a.icon-swapaxis
                &:before
                    font-size 13px
                    position relative
                    top -2px

                @-moz-document url-prefix()
                    span
                        margin-top 1px

        .x-axis-button.focused
        .y-axis-button.focused
            .icon-xaxis
            .icon-yaxis
                color $color-hover-dark !important

    #datatable
        .ht_master .wtHolder
            width 100% !important

        .ht_clone_top_left_corner th
            background $color-hover-light
            border 2px solid white

        // Column headers (sticky and non-sticky)
        .ht_master thead,
        .ht_clone_top thead,
        .ht_clone_left thead,
        .ht_clone_left tbody,
        .ht_clone_corner thead
            tr
                th
                    background $color-hover-light
                    border 2px solid white

                &:nth-child(odd) th
                    &.current-col
                    &.current-row
                        background $color-green !important
                &:nth-child(even) th
                    &.current-col
                    &.current-row
                        background $color-green !important
        // Body
        .ht_master
            th, td
                border 2px solid $color-white

            tbody tr
                &:nth-child(odd) td
                    background $color-table-odd-passive
                    &.current-col
                    &.current-row
                        background $color-table-odd-active !important

                &:nth-child(even) td
                    background $color-table-even-passive
                    &.current-col
                    &.current-row
                        background $color-table-even-active !important

            tbody tr td.highlight
                background $color-hover-light !important

        // Input field
        .handsontableInputHolder
            padding 2px
            textarea
                background $color-grey-light

        .wtBorder
            background-color $color-green !important

            &.current
                background-color $color-green !important

    .highlighted
        background $color-grey-dark !important
        color $color-white !important
        cursor pointer

        .selected-x
        .selected-y
        .selected-x-y
            &:before
                color $color-white !important

        &:hover
            background $color-green !important
            border 2px $color-hover-dark solid !important

    .focused
        color $color-green !important

    .selected
        background $color-green !important
        color $color-white !important
        border 2px $color-hover-dark solid !important

        [class*="selected-"]:before
            color $color-white !important
            font-size 18px

    [class*="selected-"]:before
        color $color-border
        margin-right 5px
        font-size 14px

    .selected-x
        &:before
            content "X"

    .selected-y
        &:before
            content "Y"

    .selected-x-y
        &:before
            content "X Y"

