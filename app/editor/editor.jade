#editor.wrapper-content(ng-controller="EditorCtrl")
    .title
        input(type="text" id="vidatio-title" placeholder=" {{ 'TITLE' | translate }} " ng-change="saveVidatioTitle()" ng-model="editor.fileName" ng-model-options="{ updateOn: 'blur' }" onClick="select();")

    .editor-panel
        a.tab(href="#" ng-class="{'active': activeTabs[0]}" ng-click="tabClicked(0)") {{ "DATASET" | translate | uppercase }}
        a.tab.middle(href="#" ng-class="{'active': activeTabs[1]}" ng-click="tabClicked(1)") {{ "DATASET + VISUALIZATION" | translate | uppercase }}
        a.tab(href="#" ng-class="{'active': activeTabs[2]}" ng-click="tabClicked(2)") {{ "VISUALIZATION" | translate | uppercase }}
    .row
        include table/table
        .seperator
        include visualization/visualization
