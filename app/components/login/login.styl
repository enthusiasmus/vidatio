.login-registration-container
    display flex
    max-width 400px
    margin-bottom 30px

#login
    h3
        text-align center
        margin 10px auto 15px
        width 100%
        font-family Colaborate-Regular, $fonts

    p
        {lightText}

    input.form-control
        border-left 0

@keyframes fadeIn {
    from {
        opacity: 0
    }
    to {
        opacity: 1
    }
}

@keyframes fadeOut {
    from {
        opacity: 1
    }
    to {
        opacity: 0
    }
}
