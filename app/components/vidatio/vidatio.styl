vidatio
    text-align center
    padding-bottom  20px

    margin-bottom 20px
    background #F2F2F2
    border-top 3px solid $color-green
    box-shadow $box-shadow-size $color-shadow
    position relative
    width 100%


    .content-container
        width 100%
        height 100%

        .text
            padding 0 10px
            margin 15px 0
            text-align left

            p
                line-height 1.2
                font-size 14px

        a.img
            padding 10px
            background-color $color-white
            display block

            h4, img
                font-size 18px
                width 100%

            img
                width auto
                height 125px
                max-width: 100%

            img.placeholder
                opacity 0.4

        a.img:hover ~ .text a
            color $color-hover-dark

    .btns-container
        width 100%
        height 60px

        .btns
            position absolute
            bottom 15px
            left 50%
            width 100%
            transform translateX(-50%)

            .action-button
                a
                    font-size 24px
                    display inline-block
                    margin 0 10px
                    color $color-grey-dark

                    > span
                        display block
                        text-transform uppercase
                        position relative
                        color inherit
                        font-size 10px
                        margin-top -7px
                        font-family Colaborate,Arial,Helvetica,sans-serif

                .icon-edit:hover
                .icon-edit:active
                    color $color-hover-dark

                .icon-trash:hover
                .icon-trash:active
                    color $color-red

                &:first-child
                    margin-left 2px

                &:last-child
                    margin-left auto





