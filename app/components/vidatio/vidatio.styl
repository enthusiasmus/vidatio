vidatio-overview
    text-align center
    padding-bottom  20px

    .content-container
        width 100%
        height 100%

        .text
            padding 0 10px
            margin 15px 0
            text-align left

            p
                line-height 1.2
                font-size 14px

        a.img
            padding 10px
            background-color $color-white
            display block

            h4, img
                font-size 18px
                width 100%

            img
                width auto
                height 125px
                max-width: 100%

            img.placeholder
                opacity 0.4

        a.img:hover ~ .text a
            color $color-hover-dark

    .btns-container
        width 100%
        height 60px

        .btns
            position absolute
            bottom 15px
            left 50%
            width 100%
            transform translateX(-50%)

            .icon-edit
            .icon-trash
                width 50px
                margin 0 10px






