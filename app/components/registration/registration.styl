#registration
    max-width 400px

    form
        padding-top 30px

    .form-group
        .input-group-addon.fui-mail
            border-top-left-radius 4px

        .input-group-addon.fui-lock
            border-bottom-left-radius 4px

        .email
            border-top-right-radius 4px

        .password
            border-bottom-right-radius 4px

        input.form-control
            border-left 0

    .error-password
        margin-top -2px
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px
