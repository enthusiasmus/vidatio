.cbp-spmenu-push-toleft
    cursor pointer

nav
    .cbp-spmenu-right
        right -350px

    .cbp-spmenu-vertical
        width 350px

        a
            border none

    .cbp-spmenu-open
        cursor auto

    .cbp-spmenu
        background url(../images/dotgrid.png) $color-grey-dark

        padding 40px 20px 20px 20px
        text-transform uppercase
        overflow-y scroll
        overflow-x hidden

        .menu-header
            margin-top -2px
            height 40px
            width 100%
            margin-bottom 30px

            .menu-close-button
                a
                    position absolute
                    left 0
                    font-size 80px
                    line-height 30px
                    color $color-red
                    cursor pointer
                    padding 0

                    &:hover
                        color $color-green



            #logo-menu
                background url(../images/logo-text-white-align-right.svg) no-repeat
                background-size 111px
                width 111px
                height 40px
                position absolute
                right 0

                a
                    padding 0
                    height 100%
                    width 100%

        a
            font-size 18px
            padding 5px 0
            clear both

            &:hover
                background none
                color $color-green

            &:active
                color $color-hover-dark

        h3
            background none
            color $color-red
            margin-top 50px
            text-align right
            padding 0


@media(max-width: 500px)
    nav
        .cbp-spmenu-vertical
            width 290px

        .cbp-spmenu
            a
                font-size 16px

            h3
                font-size 24px
                margin-top 35px

        .login-container
            p
                font-size 16px
