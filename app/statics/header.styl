header

    #line-right
        background $color-green
        height 8px

    #line-left
        background $color-red
        height 8px

    .middle
        text-align center

    #navigation
        clear both
        max-width 1024px
        margin 0 auto
        padding 30px 0

    #navigation.editor
        max-width 98%

    #logo
        background url(../images/logo-text-black.svg) no-repeat
        background-size 111px
        width 113px
        height 40px
        float left

    #process-nav
        max-width 653px
        height 50px
        display block
        margin 0 auto
        position relative

        a
            font-family Colaborate-Medium, $fonts
            border-bottom 3px solid $color-passive
            color $color-passive
            font-size 21px
            line-height 54px
            float left
            height 50px
            text-align center
            width 33.333%

            //hover transitions for underline and color
            &:nth-child(3)
            &:nth-child(2)
            &:first-child
                &::before
                    background $color-hover-dark
                    bottom 0
                    content ""
                    display block
                    height 3px
                    position absolute
                    transition width 0.3s ease 0s
                    width 0

                &:hover:not(.active):not(.disabled)
                    &::before
                        width 33.34%

            &:nth-child(3)
                &::before
                    left calc(100%/3*2)

            &:nth-child(2)
                &::before
                    right calc(100%/3)

            &:first-child
                &::before
                    right calc(100%/3*2)

            &:hover,
            &:focus
                color $color-hover-dark
                -webkit-transition color 0.5s
                transition color 0.5s

            //active state with arrow in line
            &.active
                color $color-green
                border-color $color-green

                &::after
                    border-left 16px solid transparent
                    border-right 16px solid transparent
                    border-top: 12px solid $color-grey-light
                    content ""
                    display block
                    margin -16px auto 0
                    width 15px

                span
                    //arrow in line on active, 1st span is icon
                    &:nth-child(2)
                        &::after
                            border-left 16px solid transparent
                            border-right 16px solid transparent
                            border-top 12px solid $color-green
                            content ""
                            display block
                            margin -5px auto 0
                            width 15px

                &:hover,
                &:focus
                    color $color-green
                    border-color $color-green

            &.disabled
                opacity 0.15
                cursor default

                &:hover,
                &:focus
                    color $color-passive
                    border-color $color-passive

        a#edit-data.clickable
            &:nth-child(2)
                &::before
                    left calc(100%/3)

    #back-to-datasets-overview
        float left
        margin-left 60px
        line-height 17px
        position relative
        height 40px
        text-align center

        .btn-tip
            padding-left 0

        .fui-arrow-left
            &::before
                margin-right 5px
                font-size 14px

        span
            margin-right 1px

        &:hover
            color $color-white

        &.active
            border-bottom 4px solid $color-green
            line-height 41px
            color $color-white

            &::after
                border medium solid transparent
                content " "
                height 0
                left 50%
                pointer-events none
                position absolute
                top 39px
                width 0
                border-top-color $color-green
                border-width 10px
                margin-left -10px

            &::before
                border-top-color $color-green
                border-width 10px
                margin-left -10px

    .menu-buttons
        height 42px
        text-align right

        div
            display inline

        a#login-button
        a#menu
        a#save-button
            color $color-black
            line-height 42px
            vertical-align middle
            text-align center
            width 42px
            height 42px
            display inline-block
            margin-left 3px
            border-radius 4px

            &:hover, &:focus
                color $color-grey-light
                background-color $color-passive

            &:active
                color $color-green

            &.menu-active
                color $color-green !important

        a#menu
            font-size 20px

        a#login-button
        a#save-button
            font-size 23px

        a#login-button
            padding-left 2px

@media(max-width: 767px)
    header
        .title
            width 90%
            margin 0 5%

        .menu-buttons
            a#save-button
                position absolute
                right 60%

@media(min-width: 768px)
    header
        .menu-buttons
            a#save-button
                position absolute
                right 15px
                top 57px

@media(max-width: 800px)
    header
        #process-nav
            margin-top 25px

            a
                height 65px
                line-height 28px

                &:nth-child(3)
                &:nth-child(2)
                &:first-child
                    &::before
                        bottom -15px

                span
                    display block

                    &:nth-child(2)
                        font-size 16px

                &.active
                        span
                             &:nth-child(2)
                                    &::after
                                        margin-top 5px

        .title
            top 125px

@media(min-width: 1100px)
    header
        .menu-buttons
            a#save-button
                left 0
                top 0
