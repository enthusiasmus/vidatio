header

    #line-right
        background $color-green
        height 8px

    #line-left
        background $color-red
        height 8px

    .middle
        text-align center

    #navigation
        clear both
        max-width 1024px
        margin 0 auto
        padding 30px 0

        .editor-panel
            display flex
            flex-direction row
            display -webkit-flex /* Safari */
            -webkit-flex-direction row

        .separator
            width 2px
            background-color $color-green

    #navigation.editor
        max-width 98%

    #logo
        background url(../images/logo-text-black.svg) no-repeat
        background-size 111px
        width 113px
        height 40px
        float left

    #save-dataset
        float left
        height 40px
        width 112px

    .tab
        border-bottom 4px solid $color-passive
        display inline-block
        width 50%
        height 42px
        line-height 41px
        background $color-passive
        position relative
        float left
        color $color-table-even-active
        text-align center
        font-family Colaborate, $fonts
        font-size 16px
        box-sizing border-box

        &:hover
            color $color-white

        &.active
            border-bottom 4px solid $color-green
            line-height 41px
            color $color-white

            &::after
                border medium solid transparent
                content " "
                height 0
                left 50%
                pointer-events none
                position absolute
                top 39px
                width 0
                border-top-color $color-green
                border-width 10px
                margin-left -10px

            &::before
                border-top-color $color-green
                border-width 10px
                margin-left -10px

    #back-to-datasets-overview
    #back-to-import
        float left
        margin-left 60px
        text-align center
        color $color-black
        line-height 42px
        font-size 26px
        width 42px
        height 42px
        border-radius 4px
        top -5px
        position relative
        cursor pointer

        &:hover, &:focus
            color $color-grey-light
            background-color $color-passive

        &:active
            color $color-green

        span
            display block
            position relative
            color $color-black
            font-size 10px
            font-family Colaborate,Arial,Helvetica,sans-serif
            top -16px

    .menu-buttons
        height 42px
        text-align right

        div
            display inline
            position relative
            top -5px

        a#login-button
        a#menu
            color $color-black
            line-height 42px
            vertical-align middle
            text-align center
            width 42px
            height 42px
            display inline-block
            margin-left 3px
            border-radius 4px

            &:hover, &:focus
                color $color-grey-light
                background-color $color-passive

            &:active
                color $color-green

            &.menu-active
                color $color-green !important

        span
            display block
            position relative
            color $color-black
            font-size 10px
            font-family Colaborate,Arial,Helvetica,sans-serif

        a#menu
            font-size 20px

            span
                top -16px

        a#login-button
            font-size 23px
            padding-left 2px

            span
                top -15px
                margin-left -2px

    #link-overlay
        position absolute
        top 90px
        right calc(100vw * 0.01)
        z-index 310
        box-shadow $box-shadow-size $color-shadow
        background $color-white
        border-top 3px solid $color-green
        padding 5px 10px 10px 10px
        text-align right
        max-width 98%

        p
            float left
            margin 0

        .fui-cross
            background $color-white
            color $color-grey-dark
            text-align right
            &:hover
                color $color-red

        .form-control
            border-color $color-grey-dark

        #copy-link
            background $color-white
            color $color-grey-dark
            border 2px solid $color-green
            margin-top 10px
            &:hover
                background $color-hover-light
                border-color $color-hover-light

@media(max-width: 767px)
    #navigation
        .editor-panel
        a#save-dataset
        a#back-to-import
            margin-top 10px

        a#save-dataset
            float right

        #back-to-datasets-overview
            position absolute
            left 150px
            margin-left 0
