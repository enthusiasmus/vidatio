header

    #line-right
        background $color-green
        height 8px

    #line-left
        background $color-red
        height 8px

    .middle
        text-align center

    #navigation
        clear both
        max-width 1024px
        margin 0 auto
        padding 30px 0

        .editor-panel
            display flex
            flex-direction row
            display -webkit-flex /* Safari */
            -webkit-flex-direction row

        .separator
            width 2px
            background-color $color-green

    #navigation.editor
        max-width 98%

    #logo
        background url(../images/logo-text-black.svg) no-repeat
        background-size 111px
        width 111px
        height 40px
        float left

    #back-to-import
        float right

    #back-to-datasets-overview
        float left
        margin-left 60px

    #back-to-import
    #back-to-datasets-overview
        position relative
        height 40px
        text-align center
        line-height 17px

        .btn-tip
            padding-left 0

        .fui-arrow-left
            &::before
                margin-right 5px
                font-size 14px

        span
            margin-right 1px

    #back-to-import
    #save-dataset
        width 112px

    #save-dataset
        float left
        height 40px

    .tab
        border-bottom 4px solid $color-passive
        display inline-block
        width 50%
        height 42px
        line-height 41px
        background $color-passive
        position relative
        float left
        color $color-table-even-active
        text-align center
        font-family Colaborate, $fonts
        font-size 16px
        box-sizing border-box

        &:hover
            color $color-white

        &.active
            border-bottom 4px solid $color-green
            line-height 41px
            color $color-white

            &::after
                border medium solid transparent
                content " "
                height 0
                left 50%
                pointer-events none
                position absolute
                top 39px
                width 0
                border-top-color $color-green
                border-width 10px
                margin-left -10px

            &::before
                border-top-color $color-green
                border-width 10px
                margin-left -10px


    .menu-buttons
        height 42px
        text-align right

        div
            display inline

        a#login-button, a#menu
            color $color-black
            line-height 42px
            vertical-align middle
            text-align center
            width 42px
            height 42px
            display inline-block
            margin-left 3px
            border-radius 4px

            &:hover, &:focus
                color $color-grey-light
                background-color $color-passive

            &:active
                color $color-green

            &.menu-active
                color $color-green !important

        a#menu
            font-size 20px

        a#login-button
            font-size 23px
            padding-left 2px

@media(max-width: 767px)
    #navigation
        .editor-panel
        a#save-dataset
        a#back-to-import
            margin-top 10px

        a#save-dataset
            float right
        a#back-to-import
            float left
