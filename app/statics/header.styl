@require "assets/styl/colors"

header

    #line-right
        background $color-red
        height 8px

    #line-left
        background $color-green
        height 8px

    #navigation
        clear both
        max-width 1024px
        margin 0px auto
        padding 30px 0 30px 0
        height 100px

    #logo
        background url(../images/logo.png) no-repeat
        background-size 105px
        width 105px
        height 40px
        float left

    .middle
        text-align center
        height 100%
        font-weight bold

    .menu-buttons
        height 100%
        text-align right

        a
            line-height 40px
            vertical-align middle
            text-align center
            width 40px
            height 40px
            display inline-block
            margin-left 3px
            background #333
            -webkit-border-radius 4px
            -moz-border-radius 4px
            border-radius 4px

            &:hover
                background $color-navigation
                color white

        a#user
            font-size 20px

        a#menu
            font-size 25px
