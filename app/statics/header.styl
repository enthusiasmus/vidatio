@require "assets/styl/colors"

header

    #line-right
        background $color-red
        height 8px

    #line-left
        background $color-green
        height 8px

    #navigation
        clear both
        max-width 1024px
        margin 0px auto
        padding 30px 0 30px 0
        height 100px

    #logo
        background url(../images/logo.png) no-repeat
        background-size 105px
        width 105px
        height 40px
        float left

    .middle
        text-align center
        height 100%

    .menu-buttons
        height 100%
        text-align right

        a
            line-height 40px
            vertical-align middle
            text-align center
            width 40px
            height 40px
            display inline-block
            margin-left 3px
            background $color-grey-dark
            -webkit-border-radius 4px
            -moz-border-radius 4px
            border-radius 4px

            &:hover
                background $color-active
                color $color-white

        a#user
            font-size 20px

        a#menu
            font-size 25px

    @media screen and (max-width: 715px)
        #navigation .panel
            display block
            width 100%
            margin 0 auto

    .tab
        display inline-block
        margin 0 -2px
        width 33.33%
        max-width 150px
        min-width 110px
        height 40px
        background $color-passive
        border-top 3px solid $color-green
        position relative
        color white
        text-align center
        padding 7px
        font-family Colaborate-Light
        &:hover
            background $color-active
        &.border-left
            border-top-left-radius 3px
            border-bottom-left-radius 3px
        &.border-right
            border-top-right-radius 3px
            border-bottom-right-radius 3px
        &::after
            border medium solid transparent
            content " "
            height 0
            left 50%
            pointer-events none
            position absolute
            top 0
            width 0
            border-top-color $color-green
            border-width 4px
            margin-left -4px
        &::before
            border-top-color $color-green
            border-width 4px
            margin-left -4px

