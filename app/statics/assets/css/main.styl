@require "colors"

.thin-font
  font-family Colaborate-Thin, Arial, Helvetica, sans-serif

.light-font
  font-family Colaborate-Light, Arial, Helvetica, sans-serif

.bold-font
  font-family Colaborate-Bold, Arial, Helvetica, sans-serif

h1, h2, h3, h4, h5, h6
  padding 0
  margin 0
  display inline-block

h1
  font-family Colaborate-Bold, Arial, Helvetica, sans-serif
  font-size 30px

h2
  font-family Colaborate-Bold, Arial, Helvetica, sans-serif
  font-size 16px

h3
  font-family Colaborate-Light, Arial, Helvetica, sans-serif
  font-size 16px

.dotgrid
  background-image url(../images/dotgrid-dunkel-transp.png)

.underline-red
  border-bottom 3px solid $color-red

.underline-turqoise
  border-bottom 3px solid $color-green

.font-red
  color $color-red

.font-cyan
  color $color-green

.bg-cyan
  background-color $color-green

.bg-dark
  background-color $color-dark-grey

.row
  margin 0
  padding 0

.col-sm-4, .col-sm-3, .col-sm-6, .col-sm-12
  margin 0

.container-fluid
  padding 0

.btn-default:hover,
.btn-default:active,
.btn-default:focus
  color white
  background-color $color-green

html, body
  padding 0
  margin 0
  width 100%
  min-width 480px
  height 100%
  font-family Colaborate, Arial, Helvetica, sans-serif
  font-size 12px
  background-color $color-light-grey

.content
  max-width 1024px
  margin 0 auto

.bg-wrapper
  width 100%
  height 100%
  background url(../images/pattern_bright.jpg)

.wrapper
  min-height 80vh

.layout-3-columns
  .col-sm-4
    &:first-child
      & > div
        margin-right 17.66px
      .col-wrapper
        margin-right 28px
    &:nth-child(2n)
      & > div
        margin-right 8.33px
        margin-left 8.33px
      .col-wrapper
        margin-right 14px
        margin-left 14px
    &:last-child
      & > div
        margin-left 17.66px
      .col-wrapper
        margin-left 28px

header
  #line-right
    background $color-red
    height 8px
  #line-left
    background $color-green
    height 8px
  #navigation
    clear both
    max-width 1024px
    margin 0px auto
    padding 30px 0 30px 0
    height 100px
  #logo
    background url(../images/logo.png) no-repeat
    background-size 105px
    width 105px
    height 40px
    float left
  .middle
    text-align center
    height 100%
    font-weight bold
  .menu-buttons
    height 100%
    text-align right
    a
      line-height 40px
      vertical-align middle
      text-align center
      width 40px
      height 40px
      display inline-block
      margin-left 3px
      background $color-dark-grey
      -webkit-border-radius 4px
      -moz-border-radius 4px
      border-radius 4px
      &:hover
        background $color-navigation
        color white
    a#user
      font-size 20px
    a#menu
      font-size 25px

@media(max-width: 768px)
  .layout-3-columns .col-sm-4 .col-wrapper
    margin 0 !important

#footer
  color white
  background url(../images/pattern_dark.jpg)
  bottom 0px
  width 100%
  font-size 16px
  text-align center
  padding 20px

#footer
  a
    display inline-block
    margin 0 20px 0px 20px
  span
    &.icon
      width 40px
      height 40px
      margin-right 10px
      float left
      &.phone
        background url(../images/icons.png) 0px -440px
        background-size 480px auto
      &.email
        background url(../images/icons.png) -40px -440px
        background-size 480px auto
    &.text
      width auto
      height 40px
      line-height 40px
      vertical-align middle
      float right

footer
  color white
  max-width 100%
  font-size 12px
  padding 20px
  min-height 20vh
  background url(../images/dotgrid.png) #333333
  a
    display inline-block
    padding 0 5px 0px 5px
    height 30px
  .middle
    text-align center
    a
      &:link
        font-size 14px
        font-weight bold
  span
    &.icon
      width 40px
      height 40px
      margin-right 10px
      float left
    &.text
      width auto
      height 40px
      line-height 40px
      vertical-align middle
      float right

a:link, a:visited
  color white
  text-decoration none

a:hover, a:active, a:focus
  color $color-green

.button
  position relative
  color #fff
  background-color $color-green
  -webkit-box-shadow 0 3px 0 $color-button-shadow
  -moz-box-shadow 0 3px 0 $color-button-shadow
  box-shadow 0 3px 0 $color-button-shadow

.button:active,
.button:active span
  top 3px
  -webkit-box-shadow none
  -moz-box-shadow none
  box-shadow none

.button:hover,
.button:hover span
  background-color $color-green-hover
  color #fff

