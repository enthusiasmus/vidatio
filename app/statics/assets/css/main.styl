.thin-font
    font-family Colaborate-Thin, Arial, Helvetica, sans-serif

.light-font
    font-family Colaborate-Light, Arial, Helvetica, sans-serif

.bold-font
    font-family Colaborate-Bold, Arial, Helvetica, sans-serif

h1, h2, h3, h4, h5, h6
    padding 0
    margin 0
    display inline-block

h1
    font-family Colaborate-Bold, Arial, Helvetica, sans-serif
    font-size 30px

h2
    font-family Colaborate-Bold, Arial, Helvetica, sans-serif
    font-size 16px

h3
    font-family Colaborate-Light, Arial, Helvetica, sans-serif
    font-size 16px

.dotgrid
    background-image url(../images/dotgrid-dunkel-transp.png)

.underline-red
    border-bottom 3px solid #ff5444

.underline-turqoise
    border-bottom 3px solid #11ddc6

.font-red
    color #ff5347

.font-cyan
    color #11ddc6

.bg-cyan
    background #11ddc6

.bg-dark
    background-color #333

.row
    margin 0
    padding 0

.col-sm-4, .col-sm-3, .col-sm-6, .col-sm-12
    margin 0

.container-fluid
    padding 0

.btn-default:hover,
.btn-default:active,
.btn-default:focus
    color white
    background-color #11ddc6

html, body
    padding 0
    margin 0
    width 100%
    min-width 480px
    height 100%
    font-family Colaborate, Arial, Helvetica, sans-serif
    font-size 12px
    background-color #FAFAFA

.content
    max-width 1024px
    margin 0 auto

.bg-wrapper
    width 100%
    height 100%
    background url(../images/pattern_bright.jpg)

.wrapper
    min-height 80vh


.layout-3-columns
    .col-sm-4

        &:first-child
            & > div
                margin-right 17.66px
            .col-wrapper
                margin-right 28px

        &:nth-child(2n)
            & > div
                margin-right 8.33px
                margin-left 8.33px
            .col-wrapper
                margin-right 14px
                margin-left 14px

        &:last-child
            & > div
                margin-left 17.66px
            .col-wrapper
                margin-left 28px

@media(max-width: 768px)
    .layout-3-columns .col-sm-4 .col-wrapper
        margin 0 !important


a:link, a:visited
    color white
    text-decoration none

a:hover, a:active, a:focus
    color #11ddc6

.button
    position relative
    color #fff
    background-color #11ddc6
    -webkit-box-shadow 0 3px 0 #009989
    -moz-box-shadow 0 3px 0 #009989
    box-shadow 0 3px 0 #009989

.button:active,
.button:active span
    top 3px
    -webkit-box-shadow none
    -moz-box-shadow none
    box-shadow none

.button:hover,
.button:hover span
    background-color #11AA9A
    color #fff

