@require "colors"
@require "helpers"

h1, h2, h3, h4, h5, h6
    padding 0
    margin 0
    display inline-block
    font-weight normal

h1
    font-family Colaborate-Medium, $fonts
    font-size 30px
    text-transform uppercase
    line-height 25px

h2
    font-family Colaborate-Thin, $fonts
    font-size 24px

h3
    font-family Colaborate-Regular, $fonts
    font-size 19px
    font-weight bold

h4
    font-family Colaborate-Regular, $fonts
    font-weight bold
    font-size 16px

p
    line-height 20px

::-webkit-input-placeholder
    font-size 16px
    color $color-grey !important
    opacity 1

// Firefox > 19
::-moz-placeholder
    font-size 16px
    color $color-grey !important
    opacity 1

// Firefox < 19
:-moz-placeholder
    font-size 16px
    color $color-grey !important
    opacity 1

input:-ms-input-placeholder
    font-size 16px
    color $color-grey !important
    opacity 1

a, a:visited, footer a, footer a:visited
    font-weight normal
    color $color-white
    text-decoration none

    &.inverse
        color $color-green

    &.dark
        color $color-grey-dark

a:hover, footer a:hover
    color $color-green

    &.inverse
        color $color-hover-dark

    &.dark
        color $color-green

a:active, a:focus, footer a:active, footer a:focus
    color $color-hover-dark

    &.inverse
        color $color-active

    &.dark
        color $color-hover-dark

a:focus
    outline none

.dotgrid
    background-image url(../images/dotgrid-dunkel-transp.png)

.underline-red
    border-bottom 3px solid $color-red

.underline-turqoise
    border-bottom 3px solid $color-green

.underline-red-light
    border-bottom 3px solid $color-red-light

.font-red
    color $color-red

.font-red-light
    color $color-red-light

.font-cyan
    color $color-green

.font-green-dark
    color $color-border

.bg-cyan
    background-color $color-green

.bg-dark
    background-color $color-grey-dark

html, body
    padding 0
    margin 0
    width 100%
    height 100%
    position relative
    font-family Colaborate, Arial, Helvetica, sans-serif
    font-size 16px
    color $color-grey-dark
    background-color $color-grey-light

p, input, label
    font-size 16px

.app-view
    padding-bottom 100px

.wrapper
    min-height 100%
    min-width 300px
    position relative

.wrapper-content
    max-width 1024px
    margin 0 auto

.layout-3-columns
    .col-sm-4
        &:first-child
            & > div
                margin-right 17.66px
            .col-wrapper
                margin-right 28px

        &:nth-child(2n)
            & > div
                margin-right 8.33px
                margin-left 8.33px
            .col-wrapper
                margin-right 14px
                margin-left 14px

        &:last-child
            & > div
                margin-left 17.66px
            .col-wrapper
                margin-left 28px

@media (max-width 768px)
    .layout-3-columns .col-sm-4 .col-wrapper
        margin 0 !important

.border-left
    border-top-left-radius 3px
    border-bottom-left-radius 3px

.border-right
    border-top-right-radius 3px
    border-bottom-right-radius 3px

.ng-toast
    .custom-backgrounds
        .alert
            background: $color-white
            color: $color-grey-dark
            border-radius 0
            box-shadow $box-shadow-size $color-shadow
            border none

            div
                border-radius none

            button
                opacity .3

                &:hover
                    opacity .6

        .alert-danger
            border-top 3px solid $color-red

        .alert-success
            border-top 3px solid $color-green


@media (max-width: 500px)
    @keyframes fadeIn {
        from {
            opacity: 0
        }
        to {
            opacity: 1
        }
    }

    @keyframes fadeOut {
        from {
            opacity: 1
        }
        to {
            opacity: 0
        }
    }

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
    display none !important

.checkbox
    cursor: pointer

.center-block
    display block
    margin-left auto !important
    margin-right auto !important
    float: none

.copy-vidatio-button-group
    input
        border-color $color-input-border-inactive
        border-radius 4px

        &:hover
        &:focus
            border-color $color-green

    input.form-control[readonly]
        color $color-black

.get-started
    position relative
    left 50%
    margin-left -90px
    width 175px
    transform rotate(-10deg)

    a
        width inherit
        padding 15px 10px 10px 10px
        text-align center
        display inline-block
        line-height 30px
        vertical-align middle
        border-radius 5px

        &:visited
            color $color-white

        span
            position absolute
            width 50px
            top -20px
            right -15px
            display inline-block
            transform rotate(10deg)
            font-size 50px
            padding-top 15px
            padding-bottom 15px
            border-radius 5px
            font-weight bold

        &:hover
            span
                background-color $color-hover-dark

        &:active
        &:focus
            background-color $color-active

            span
                background-color $color-active

.btn span.icon-bracketright
    font-size 14px
    margin-left 5px

#terms
#imprint
#login
#fourofour
#profile
#import
#registration
#share
    .area
        border-top 3px solid $color-green
        background $color-white
        box-shadow $box-shadow-size $color-shadow
        min-width 130px
        padding 0 30px 30px 30px
        margin-bottom 25px

.right
    float right

.form-group
    margin-bottom 0

    &:last-child
        margin-bottom 20px

.option-icon
    width 100px
    margin 15px auto 0
    height 62px
    font-size 45px
    color $color-dark-grey
    text-align center

.option-icon.icon-save
    margin 4px auto 10px
    font-size 54px

/* additional style for d3Plus error message in editor, share amd detailview */
#editor
#share
#dataset-view
    #d3plus_message
        width 90% !important
        margin 0 5% !important
        left 0 !important
        transform translateY(-50%)

.cookiebanner
    padding 20px 0 20px 0 !important
    a:hover
        color $color-grey !important
