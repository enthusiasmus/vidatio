.vidatios
    .row.cards
        display flex
        flex-wrap wrap

        > div
            display flex

.vidatio
    margin-bottom 20px
    background #F2F2F2
    border-top 3px solid $color-green
    box-shadow $box-shadow-size $color-shadow
    position relative
    width 100%

    h4, img
        font-size 18px
        width 100%

    a.img
        padding 10px
        background-color $color-white
        display block

    img
        width auto
        height 125px
        max-width: 100%

    img.placeholder
        height 50%
        opacity 0.4

    .text
        padding 0 10px
        margin 15px 0
        text-align left

    a.img:hover ~ .text a
        color $color-hover-dark

    p
        line-height 1.2
        font-size 14px
