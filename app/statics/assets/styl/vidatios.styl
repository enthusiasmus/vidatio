.vidatios
    .row.cards
        display flex
        flex-wrap wrap

        > div
            display flex

.vidatio
    margin-bottom 20px
    background #F2F2F2
    border-top 3px solid $color-green
    box-shadow $box-shadow-size $color-shadow
    position relative
    width 100%

    h4, img
        font-size 18px
        width 100%

    .img
        background-color $color-white
        display block

    img
        position relative
        top 50%
        -webkit-transform translateY(-50%)
        -ms-transform translateY(-50%)
        transform translateY(-50%)

    a.img
        height 135px
        padding 5px

    .text
        padding 10px 10px 25px
        margin-bottom 30px

    .title
        margin-bottom 15px

    a.img:hover ~ .text a
        color $color-hover-dark

    p
        line-height 1.2
        font-size 14px

    #create-vidatio
        font-size 14px
        padding 6px 8px
        position absolute
        bottom 0
        left 50%
        transform translate(-50%, -50%)

        span
            margin-left 2px

@media(max-width: 767px)
    .vidatio
        a.img
            height 45vw
            padding 10px

        img
            max-height 42vw
