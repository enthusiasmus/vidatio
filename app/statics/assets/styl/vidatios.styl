.vidatios .row
    margin: 0 -15px

.vidatios h3
    margin-bottom 20px

.vidatio
    margin-bottom 20px
    background #F2F2F2
    border-top 3px solid $color-green
    box-shadow $box-shadow-size $color-shadow

    h4, img
        width 100%

    .img
        background #F2F2F2
    .text
        background #E5E5E5
        padding 10px
        .title
            height 40px

    p
        height 40px
        line-height 1
        font-size 16px
    a
        display block
        padding 0
        width 100%
        color $color-grey-dark

        &:hover
            color $color-white

    a.right
        padding 0 8px
        text-align right
