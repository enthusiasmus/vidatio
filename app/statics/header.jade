header

    .row
        #line-left.col-xs-6
        #line-right.col-xs-6

    div
        .switch-container(ng-switch on="$state.current.title")
            #navigation.row(ng-switch-when="import")
                .col-xs-3.logo
                    a(ui-sref='app.landingPage({ locale: locale })')
                        #logo
                .col-xs-6.middle
                    h1.underline-red IMPORT
                .col-xs-3.menu-buttons
                    a#menu.icon-hamburger.toggle-menu.menu-right.push-body

            #navigation.row.editor(ng-switch-when="editor" ng-controller="HeaderCtrl")
                .col-xs-6.col-sm-3.logo
                    a(ui-sref='app.landingPage({ locale: locale })')
                        #logo

                    a(ui-sref='app.import({ locale: locale })')
                        #back-to-import-button

                .col-xs-6.col-sm-push-6.col-sm-3.menu-buttons
                    a#menu.icon-hamburger.toggle-menu.menu-right.push-body

                .col-xs-12.col-sm-pull-3.col-sm-6.editor-panel
                    a.tab.border-left(href='#' ng-class="{'active': activeViews[0]}" ng-click="tabClicked(0)") {{ "DATA" | translate | uppercase }}
                    .separator
                    a.tab(href='#' ng-class="{'active': activeViews[1]}" ng-click="tabClicked(1)") {{ "VISUALIZATION" | translate | uppercase }}
                    .separator
                    a.tab.border-right(href='#' ng-class="{'active': activeViews[2]}" ng-click="tabClicked(2)") {{ "SAVE" | translate | uppercase }}


            #navigation.row(ng-switch-default)
                .col-xs-6.logo
                    a(href='/')
                        #logo
                .col-xs-6.menu-buttons
                    a#menu.icon-hamburger.toggle-menu.menu-right.push-body

    nav
        .cbp-spmenu.cbp-spmenu-vertical.cbp-spmenu-right
            .logo
                a(ui-sref='app.landingPage({ locale: locale })')
                    #logo-menu
            a(href="#") Verf√ºgbare Datensets
            a(ui-sref='app.import({ locale: locale })') Daten importieren
            a(href="#") Features
            a(href="#") Pricing
            a(href="#") API
            h3 {{ 'USER_SECTION' | translate }}
            .login-container
                p {{ 'MAIL' | translate }}
                input.form-control.input-sm(type="text" placeholder="{{ 'MAIL' | translate }}")
                p {{ 'PASSWORD' | translate }}
                input.form-control.input-sm(type="text" placeholder="{{ 'PASSWORD' | translate }}")
                button.btn.btn-primary.btn-wide.input-sm(type="submit") {{ "LOGIN" | translate }}

