header.ng-cloak

    .row
        #line-left.col-xs-6
        #line-right.col-xs-6

    div
        .switch-container(ng-switch on="$state.current.title")

            #navigation.row(ng-switch-when="dataset")
                .col-xs-6.logo
                    a#logo(ui-sref="app.index({ locale: locale })")
                    #back-to-datasets-overview.icon-opendata(ui-sref='app.catalog({ locale: locale })')
                        span {{ "OVERVIEW" | translate | uppercase }}

                .col-xs-6.menu-buttons
                    div(ng-if="globals.authorized")
                        a#profile-button.button.icon-profile(ui-sref="app.profile({ locale: locale })")
                            span {{ "PROFILE" | translate | uppercase }}
                    div(ng-if="!globals.authorized")
                        a#login-button.button.icon-login(ui-sref="app.login({ locale: locale })")
                            span {{ "LOGIN" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

            #navigation.row.editor(ng-switch-when="editor" ng-controller="HeaderCtrl")
                .col-xs-6.col-sm-2.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.col-sm-push-8.col-sm-2.menu-buttons
                    div(ng-if="globals.authorized")
                        a#profile-button.button.icon-profile(ui-sref="app.profile({ locale: locale })")
                            span {{ "PROFILE" | translate | uppercase }}
                    div(ng-if="!globals.authorized")
                        a#login-button.button.icon-login(ui-sref="app.login({ locale: locale })")
                            span {{ "LOGIN" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

                .col-xs-12.col-sm-pull-2.col-sm-8
                    #process-nav
                        a#import-data(ui-sref="app.import({ locale: locale })")
                            span.icon-import
                            span  {{ "IMPORT" | translate | uppercase }}
                        a#edit-data.active(href='#')
                            span.icon-edit
                            span  {{"EDIT" | translate | uppercase}}
                        a#use-data(ui-sref="app.share({ locale: locale })")
                            span.icon-check
                            span  {{"USE" | translate | uppercase}}

            #navigation.row(ng-switch-when="share" ng-controller="HeaderCtrl")
                .col-xs-6.col-sm-2.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.col-sm-push-8.col-sm-2.menu-buttons
                    div(ng-if="globals.authorized")
                        a#profile-button.button.icon-profile(ui-sref="app.profile({ locale: locale })")
                            span {{ "PROFILE" | translate | uppercase }}
                    div(ng-if="!globals.authorized")
                        a#login-button.button.icon-login(ui-sref="app.login({ locale: locale })")
                            span {{ "LOGIN" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

                .col-xs-12.col-sm-pull-2.col-sm-8
                    #process-nav
                        a#import-data(ui-sref="app.import({ locale: locale })")
                            span.icon-import
                            span  {{ "IMPORT" | translate | uppercase }}
                        a#edit-data(ui-sref="app.editor({ locale: locale })")
                            span.icon-edit
                            span  {{"EDIT" | translate | uppercase}}
                        a#use-data.active(href="#")
                            span.icon-check
                            span  {{"USE" | translate | uppercase}}

            #navigation.row(ng-switch-when="import" ng-controller="HeaderCtrl")
                .col-xs-6.col-sm-2.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.col-sm-push-8.col-sm-2.menu-buttons
                    div(ng-if="globals.authorized")
                        a#profile-button.button.icon-profile(ui-sref="app.profile({ locale: locale })")
                            span {{ "PROFILE" | translate | uppercase }}
                    div(ng-if="!globals.authorized")
                        a#login-button.button.icon-login(ui-sref="app.login({ locale: locale })")
                            span {{ "LOGIN" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

                .col-xs-12.col-sm-pull-2.col-sm-8
                    #process-nav
                        a#import-data.active(ui-sref="app.import({ locale: locale })")
                            span.icon-import
                            span  {{ "IMPORT" | translate | uppercase }}
                        a#edit-data.clickable(ui-sref="app.editor({ locale: locale })"  ng-disabled="header.editorNotInitialized" ng-class="{'disabled': header.editorNotInitialized}")
                            span.icon-edit
                            span  {{"EDIT" | translate | uppercase}}
                        a#use-data(ui-sref="app.share({ locale: locale })" ng-disabled="header.editorNotInitialized" ng-class="{'disabled': header.editorNotInitialized}")
                            span.icon-check
                            span  {{"USE" | translate | uppercase}}

            #navigation.row(ng-switch-when="login")
                .col-xs-3.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.middle
                    h1.underline-red-light {{ "LOGIN" | translate | uppercase }}

                .col-xs-3.menu-buttons
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}


            #navigation.row(ng-switch-when="registration")
                .col-xs-3.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.middle
                    h1.underline-red-light {{ "REGISTRATION" | translate | uppercase }}

                .col-xs-3.menu-buttons
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

            #navigation.row(ng-switch-when="profile")
                .col-xs-3.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.middle
                    h1.underline-red-light {{ "MY_PROFILE" | translate | uppercase }}

                .col-xs-3.menu-buttons
                    div(ng-if="globals.authorized")
                        a#logout-button.button.icon-logout(ng-click="logout()")
                            span {{ "LOG_OUT" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

            #navigation.row(ng-switch-when="catalog")
                .col-xs-6.col-sm-2.logo
                    a#logo(ui-sref="app.index({ locale: locale })")
                    a#back-to-import.button.icon-import(ui-sref='app.import({ locale: locale })')
                        span {{ "IMPORT" | translate | uppercase }}

                .col-xs-6.col-sm-push-8.col-sm-2.menu-buttons
                    div(ng-if="globals.authorized")
                        a#profile-button.button.icon-profile(ui-sref="app.profile({ locale: locale })")
                            span {{ "PROFILE" | translate | uppercase }}
                    div(ng-if="!globals.authorized")
                        a#login-button.button.icon-login(ui-sref="app.login({ locale: locale })")
                            span {{ "LOGIN" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}

                .col-xs-12.col-sm-pull-2.col-sm-8.middle
                    h1.underline-red-light.catalog-title {{ "ALL_VIDATIOS" | translate | uppercase }}

            #navigation.row(ng-switch-default)
                .col-xs-6.logo
                    a#logo(ui-sref="app.index({ locale: locale })")

                .col-xs-6.menu-buttons
                    div(ng-if="globals.authorized")
                        a#profile-button.button.icon-profile(ui-sref="app.profile({ locale: locale })")
                            span {{ "PROFILE" | translate | uppercase }}
                    div(ng-if="!globals.authorized")
                        a#login-button.button.icon-login(ui-sref="app.login({ locale: locale })")
                            span {{ "LOGIN" | translate | uppercase }}
                    div
                        a#menu.button.icon-hamburger.toggle-menu.menu-right.push-body(href='#')
                            span {{ "MENU" | translate | uppercase }}
