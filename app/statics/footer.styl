@require "assets/styl/colors"

footer
    font-size 16px
    position absolute
    bottom 0
    min-height 80px
    color white
    width 100%
    padding 20px 0
    background url(../images/dotgrid.png) $color-grey-dark
    text-align center

    a.button
        display inline-block
        padding 8px 10px
        background none

        &:hover
        &:active
        &:focus
            color $color-green

            span
                color $color-green

        span
            margin-right 5px


@media (min-width: 768px)
    footer
        .row div
            &:first-child
                text-align left
            &:last-child
                text-align right
