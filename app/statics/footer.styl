@require "assets/styl/colors"

footer
    position absolute
    bottom 0
    min-height 80px
    color white
    width 100%
    font-size 12px
    padding 20px 0
    background url(../images/dotgrid.png) $color-grey-dark

    a
        display inline-block
        padding 5px 5px

        a
            &:link
                font-size 14px
                font-weight bold
    span
        &.icon
            width 40px
            height 40px
            margin-right 10px
            float left

        &.text
            width auto
            height 40px
            line-height 40px
            vertical-align middle
            float right

    .row div
        text-align center

@media (min-width: 768px)
    footer
        .row div
            &:first-child
                text-align left
            &:last-child
                text-align right
