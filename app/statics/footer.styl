@require "assets/styl/colors"

footer
    font-size 16px
    position absolute
    bottom 0
    min-height 80px
    color white
    width 100%
    padding 20px 0
    background url(../images/dotgrid.png) $color-grey-dark
    text-align center

    a.btn-embossed
        display inline-block
        padding 8px 10px
        -webkit-box-shadow none
        -moz-box-shadow none
        box-shadow none
        background none

        &:hover
        &:active
        &:focus
            color $color-green
            background none

            span
                color $color-green
                background none

        span
            margin-right 5px


@media (min-width: 768px)
    footer
        .row div
            &:first-child
                text-align left
            &:last-child
                text-align right
