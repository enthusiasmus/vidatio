script(src="js/app.js")
script(src="js/templates.js")

script(type="text/ng-template" id="src/paginate-anything.html")
    .paginate-anything
        ul.pagination.links(class='pagination-{{size}}', ng-if='numPages > 1')
            li(ng-class='{disabled: page <= 0}')
                a(href='', ng-click='gotoPage(page-1)') &laquo;
            li(ng-if='linkGroupFirst() > 0')
                a(href='', ng-click='gotoPage(0)') 1
            li.disabled(ng-if='linkGroupFirst() > 1')
                a(href='') &mldr;
            li(ng-repeat='p in [linkGroupFirst(), linkGroupLast()] | makeRange', ng-class='{active: p === page}')
                a(href='', ng-click='gotoPage(p)') {{p+1}}
            li.disabled(ng-if='linkGroupLast() < numPages - 2')
                a(href='') &mldr;
            li(ng-if='isFinite() && linkGroupLast() < numPages - 1')
                a(href='', ng-click='gotoPage(numPages-1)') {{numPages}}
            li(ng-class='{disabled: page >= numPages - 1}')
                a(href='', ng-click='gotoPage(page+1)') &raquo;
        .per-page(ng-if='perPagePresets.length > 0 && numPages > 1')
            select(ng-model='$parent.perPage', ng-options='p for p in perPagePresets')
            | per page

