#share
    margin 10px auto 0
    h4
        text-align center
        margin 15px auto
        width 100%

    .row
        .area
            height 254px
            border-top 3px solid $color-green
            background $color-white
            box-shadow $box-shadow-size $color-shadow
            text-align center
            margin-bottom 56px
            
            a 
                {fillParent}
                display inline-block
                color $color-grey-dark
            
            &:hover
                background $color-hover-light
                

        .option-icon
            width 100px
            margin 25px auto 0
            height 80px
            font-size 60px
            color $color-dark-grey
            text-align center
        
        #preview
            height 320px
        
        #download
            height 188px
        
        #save-share
            height 564px

        #preview
        #download
            margin-right 13px

        #save-share
            margin-left 13px


@media(max-width 768px)
    #share
        .row
            .area
                margin-bottom 25px !important
            
            #preview
            #download
            #save-share
                margin 0    