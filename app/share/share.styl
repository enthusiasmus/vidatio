#share
    margin 10px auto 0

    h3
        margin 15px 0 25px
        width 100%
        text-align center

    h4
        margin 20px 0 10px
        width 100%

    h4:first-child
        margin-top 30px

    #login
        max-width 100%

    .row
        .right-content
            padding-right 40px

        .to-detail-view
            margin-top 30px
            padding-left 20px

        .area
            min-height 254px
            border-top 3px solid $color-green
            background $color-white
            box-shadow $box-shadow-size $color-shadow

            &:hover
                background $color-white

        #download > div
            {fillParent}
            display inline
            color $color-grey-dark

        #preview
            margin-bottom 50px
            position relative
            width auto
            height 293px
            padding 20px

            #map
                z-index 5

            .visualization .placeholder img
                width 80px
                margin-top -50px
                margin-left -40px

        #download
            height 292px

            .download-selection
                a
                    height 40px
                    width 100px
                    margin-top 30px
                    padding-top 9px

        .save-share
            height auto
            min-height 635px

            .icon-save
                font-size 50px
                height 67px

            .share-options
                text-align center
                padding 0
                margin 0
                list-style none outside none
                height 45px

                li
                    display inline
                    list-style-type none
                    margin 0 5px

                    a
                        width 45px
                        height 45px
                        padding 5px
                        font-size 25px
                        color $color-white

                .icon-twitter:before
                    margin-left 2px

                .icon-googleplus
                    font-size 26px

            .icon-embeddedcode
                &:before
                    font-weight bold
                    font-size 20px

            .embeddedcodeShowOne
                font-size 32px !important

                &:before
                    position relative
                    top -4px
                    margin-left 2px

            .input-group
                margin-bottom 0
                width 100%

                &.selection
                    &::after
                        top 48%

                    select
                        height 42px
                        text-align left

                        &:not(.selected)
                            color $color-grey

                        &:selected
                            color $color-grey-dark

                        option
                            color $color-grey-dark
                            padding 5px 12px

                input
                    color $color-grey-dark

                #vidatio-link
                    border-radius 4px
                    -webkit-border-radius 4px
                    -moz-border-radius 4px

                ul.select2-choices
                    padding-left 3px
                    margin-right 5px

                textarea.embed-code
                    word-break break-all
                    min-height 140px

            button[type="submit"]
                margin-top 8px

            p
                margin-bottom 20px

            .option-icon
               &.icon-lock
                    margin-top 45px

            .checkbox
                margin 20px 0
                width 100%
                line-height 20px
                padding-left 32px
                font-size 16px

                .icons
                    left -0.5px

            .form-control[readonly]
                color $color-passive

            .input-group.form-group.selection
                &:hover
                    z-index 2

            .select2-container
                border-radius 0 0 4px 4px

@media (max-width: 767px)
    #share
        .download-selection
            .col-xs-4
                padding-left 0

                a
                    width 80px !important
                    padding-left 5px
                    padding-right 5px
