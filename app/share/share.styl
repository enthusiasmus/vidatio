#register-wrapper
#login-wrapper
#share
    margin 10px auto 0

    h3
        margin 15px 0 25px
        width 100%
        text-align center

    h4
        margin 20px 0 10px
        width 100%

    h4:first-child
        margin-top 30px

    .row
        .to-detail-view
            margin-top 30px
            padding-left 20px

            .go-icon
                font-size 14px
                margin-left 5px

        .area
            height 254px
            border-top 3px solid $color-green
            background $color-white
            box-shadow $box-shadow-size $color-shadow
            margin-bottom 56px

            &:hover
                background $color-white

        #download > div
            {fillParent}
            display inline
            color $color-grey-dark

        .option-icon
            width 100px
            margin 15px auto 0
            height 62px
            font-size 45px
            color $color-dark-grey
            text-align center

        #preview
            position relative
            width auto
            height 293px
            padding 20px

            #map
                z-index 5

            .visualization .placeholder img
                width 80px
                margin-top -50px
                margin-left -40px

        #preview
        #download
            margin-right 13px

        #download
            height 215px

        .save-share
            padding 0 45px 20px
            height auto
            min-height 564px
            margin-left 13px

            .icon-save
                font-size 50px
                height 67px

            .icon-twitter:before
                margin-left 2px

            .icon-embeddedcode
                &:before
                    font-weight bold

            .embeddedcodeShowOne
                font-size 32px !important

                &:before
                    position relative
                    top -4px
                    margin-left 2px

            .share-options
                text-align center
                padding 0
                margin 0
                list-style none outside none
                height 45px
                li
                    display inline
                    list-style-type none
                    margin 0 5px

                    a
                        width 45px
                        height 45px
                        padding 5px
                        font-size 25px
                        color $color-white

            .input-group
                margin-bottom 0
                width 100%

                &.selection
                    &::after
                        top 48%

                    select
                        height 42px
                        text-align left
                        padding-left 8px


                        &:not(.selected)
                            color $color-grey

                        &:selected
                            color $color-grey-dark

                        option
                            color $color-grey-dark
                            padding 5px 12px

                input
                    color $color-grey-dark

                #vidatio-link
                    border-top-left-radius 4px
                    border-bottom-left-radius 4px

            button[type="submit"]
                margin-top 8px

            p
                margin-bottom 20px

            .option-icon
               &.icon-lock
                    margin-top 45px

            .col-xs-6.left
                text-align left
                padding 0

            .col-xs-6.right
                text-align right
                padding 0

            .checkbox
                margin 20px 0
                width 100%
                line-height 20px
                padding-left 32px
                font-size 16px

                .icons
                    left -0.5px

            .form-control[readonly]
                color $color-passive

            h3
                margin-top 30px

            .select2-container
                border-radius 0 0 4px 4px

@media(max-width 768px)
    #register-wrapper
    #login-wrapper
    #share
        .row
            .area
                margin-bottom 25px !important

            #download
            #save-share
                margin 0
                padding 0 15px 20px

            #download
                form
                    width 90%
