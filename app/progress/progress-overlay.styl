#progress-overlay
    display none

    &.active
        display: block

    .progress-overlay-background
        position fixed
        top 0
        left 0
        background-color $color-grey-dark
        opacity .3
        z-index 10
        width 100%
        height 100%

    .progress-overlay-content
        position absolute
        background-color $color-white
        top calc((100vh - 300px) / 2)
        left calc((100vw - 400px) / 2)
        width 400px
        height 300px
        z-index 11
        border-top 3px solid $color-red

        p
            font-size 30px
            text-align center

