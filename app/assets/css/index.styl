section
  padding 50px 0

h1
  margin-bottom 20px

#intro
  padding 0
  .slogan
    font-size 30px
    margin-bottom 10px
  .diagram
    img
      width 100%
  .promo
    .description
      margin-top 10px
      font-size 16px
      text-transform uppercase
  ol
    counter-reset li-counter
    list-style-type none
    margin 0
    padding 0
    & > li
      position relative
      margin-left 25px
      font-size 14px
      margin-bottom 8px
      &.active
        &:before
          background-color #11ddc6
      &:before
        position absolute
        left -25px
        width 20px
        height 20px
        -webkit-border-radius 50%
        -moz-border-radius 50%
        border-radius 50%
        background-color #ff5347
        color white
        text-align center
        content counter(li-counter)
        counter-increment li-counter
  .get-started
    position relative
    width 175px
    margin 100px auto 0
    a
      width inherit
      padding 10px
      font-size 30px
      text-align center
      display inline-block
      line-height 30px
      -webkit-border-radius 10px
      -moz-border-radius 10px
      border-radius 10px
      &:visited
        color #FFF
    span
      position absolute
      width 50px
      top -20px
      right -15px
      display inline-block
      transform rotate(10deg)
      font-size 50px
      padding-top 15px
      padding-bottom 15px
      -webkit-border-radius 10px
      -moz-border-radius 10px
      border-radius 10px

@media(max-width: 767px)
    #intro .promo
      padding-top 20px

@media(min-width: 1200px)
    #intro .get-started
      margin-top 100px
      margin-bottom 80px
#intro
  .promo
    .video
      width 100%
      height 200px
      border 1px solid
@media(max-width: 700px)
  #intro .get-started
    margin-top 50px
    margin-bottom 140px
.shape
  width 100%
  margin-top -2px
  border-style none

#usp
  margin-top -180px
  color #FFF
  padding-top 0
  background url(../img/dotgrid.png) #333333
  div
    text-align center
  .content
