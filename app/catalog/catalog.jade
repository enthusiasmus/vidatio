#catalog.wrapper-content(ng-controller="CatalogCtrl")
    .vidatios(ng-show="vidatios.length")
        .row
            .col-xs-6.col-md-3(ng-repeat="vidatio in vidatios")
                .vidatio
                    a.img(ui-sref="app.dataset({ id: vidatio._id, locale: locale })" href="#")
                        img(src="{{ vidatio.image }}")

                    a#create-vidatio.btn.btn-primary(ui-sref="app.editor.id({ id: vidatio._id, locale: locale })" ng-click="createVidatio(vidatio._id)")
                        i.fa.fa-plus.edit-icon
                        |   {{ "CREATE_VIDATIO" | translate | uppercase }}

                    .text
                        a.inverse(ui-sref="app.dataset({ id: vidatio._id, locale: locale })" href="#")
                            h4.title {{ vidatio.title }}
                        p {{ vidatio.description | limitTo: 120}} ...
