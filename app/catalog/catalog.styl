#catalog
    h2
        display block
        margin-bottom 5px

    li
        list-style-type none

    #filter
        position relative
        padding 15px
        background $color-table-odd-passive
        border-top 3px solid $color-green

        > div:not(#time-filter)
            margin-top 20px

        #time-filter, #category-filter
            padding 0

        #time-filter
            position relative
            input
                width 46%
                display inline
                padding 8px

            span.to
                display inline-block
                text-align center
                width 6%

            [date-picker-wrapper]
                position absolute
                top 23px

            input + span + [date-picker-wrapper]
                margin-left 36px

        #category-filter
            .btn-group
                display block
                button
                    float none
                    width 100%
                ul
                    width 100%

    [date-picker] .active, [date-picker] .active.now
        background-color $color-green
        background-image none
        border none

    [date-picker] .now
        background-color $color-white
        color $color-black
        background-image none
        border 1px solid

    #my-vidatios
        padding-top 3px

    @media screen and (max-width: 992px)
        #filter
            margin-bottom 20px !important

        .vidatios .row div
            &:nth-child(odd)
                padding-left 0
            &:nth-child(even)
                padding-right 0

        #time-filter
        #category-filter
            max-width 30em
            margin 0 auto
            padding 0 15px !important

        input + span + [date-picker-wrapper]
            right 0


    @media screen and (max-width: 730px)
        #time-filter span.to
            display none
