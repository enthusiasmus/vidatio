#catalog
    h2
        display block
        margin-bottom 5px

    li
        list-style-type none

    #filter
        padding 15px
        background $color-table-odd-passive
        border-top 3px solid $color-green

        #time-filter
            input
                width 100px

            input + [date-picker-wrapper]
                margin-top -37px
                margin-left 20px


    [date-picker] .active, [date-picker] .active.now
        background-color $color-green
        background-image none
        border none

    [date-picker] .now
        background-color $color-white
        color $color-black
        background-image none
        border 1px solid
