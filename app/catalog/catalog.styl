#catalog
    label
        display block
        margin-bottom 5px
        line-height 1.2

    li
        list-style-type none

    .vidatios
        .row
            display flex
            flex-wrap wrap

            > div
                display flex

    .vidatio
        width 100%

        img
            background-color $color-white

    #filter
        position relative
        padding 15px
        background $color-table-odd-passive
        border-top 3px solid $color-border

        .filter-title
            width 100%
            text-align center

        input
            border-radius 4px

        .reset-filters
            text-align center
            > a
                color #000
                &:hover
                    color $color-green

        > div:not(#time-filter)
            margin-top 20px

        #time-filter, #category-filter
            padding 0

        #time-filter
            position relative
            input
                width 46%
                display inline
                padding 8px

            span.to
                display inline-block
                text-align center
                width 6%

            [date-picker-wrapper]
                position absolute
                top 23px

            input + span + [date-picker-wrapper]
                margin-left 36px

        #category-filter
            .btn-group
                display block
                button, ul
                    width 100%
                button
                    float none

        #tags-filter
            .select2-search-choice
                background $color-green

    [date-picker] .active, [date-picker] .active.now
        background-color $color-green
        background-image none
        border none

    [date-picker] .now
        background-color $color-white
        color $color-black
        background-image none
        border 1px solid

    #my-vidatio-filter h2
        padding-top 3px

@media (max-width: 767px)
    #filter
        margin-bottom 20px !important
        width calc(100% - 20vw)
        margin-left 10vw
        margin-right 10vw

    .vidatio
        margin-left calc(10vw - 15px)
        margin-right calc(10vw - 15px)

    .vidatios
        margin-bottom 30px

        > .row div .text
            padding 10px 30px 25px !important

@media (min-width: 768px) and (max-width: 992px)
    #filter
        margin-bottom 20px !important
        width calc(100% - 30px)
        margin-left 15px
        margin-right 15px

@media screen and (max-width: 992px)
    .vidatios > .row
        margin-left -15px
        margin-right -15px

        div .text
            padding 10px 20px 25px

    [id$="-filter"]
        max-width 30em
        margin 0 auto
        padding 0 15px !important

        .select2-container
            width 100%

    input + span + [date-picker-wrapper]
        right 0

@media screen and (max-width: 730px)
    #time-filter span.to
        display none
