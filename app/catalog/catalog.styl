#catalog
    h2
        display block
        margin-bottom 5px

    li
        list-style-type none

    .vidatio
        img
            padding-bottom 20px
            background-color $color-white

        .text
            margin-top -15px

    #create-vidatio
        position relative
        top -20px
        height 40px
        width 90%
        margin 0 auto
        line-height 40px

        &:before
            font-size 20px

        span
            position relative
            top -1px

    #filter
        position relative
        padding 15px
        background $color-table-odd-passive
        border-top 3px solid $color-border

        > div:not(#time-filter)
            margin-top 20px

        #time-filter, #category-filter
            padding 0

        #time-filter
            position relative
            input
                width 46%
                display inline
                padding 8px

            span.to
                display inline-block
                text-align center
                width 6%

            [date-picker-wrapper]
                position absolute
                top 23px

            input + span + [date-picker-wrapper]
                margin-left 36px

        #category-filter
            .btn-group
                display block
                button
                    float none
                    width 100%
                ul
                    width 100%

    [date-picker] .active, [date-picker] .active.now
        background-color $color-green
        background-image none
        border none

    [date-picker] .now
        background-color $color-white
        color $color-black
        background-image none
        border 1px solid

    #my-vidatio-filter h2
        padding-top 3px

    @media screen and (max-width: 992px)
        #filter
            margin-bottom 20px !important
            width calc(100% - 30px)
            margin-left 15px
            margin-right 15px

        .vidatios .row div
            &:nth-child(odd)
                padding-left 0
            &:nth-child(even)
                padding-right 0

            .text
                padding 10px 10px 25px
        #time-filter
        #category-filter
            max-width 30em
            margin 0 auto
            padding 0 15px !important

        input + span + [date-picker-wrapper]
            right 0


    @media screen and (max-width: 730px)
        #time-filter span.to
            display none
