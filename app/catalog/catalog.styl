#catalog
#profile
    label
        display block
        margin-bottom 5px
        line-height 1.2

    label:first-of-type
        margin-top 10px

    li
        list-style-type none

    #filter
        position relative
        padding 15px
        background $color-table-odd-passive
        border-top 3px solid $color-border

        .filter-title
            width 100%
            text-align center

        input
            border-radius 4px

        .reset-filters
            text-align center
            > a
                color #000
                &:hover
                    color $color-green

        > div
            margin-top 10px

        #time-filter, #category-filter
            padding 0

        #time-filter
            position relative
            input
                width 46%
                display inline
                padding 8px

            span.to
                display inline-block
                text-align center
                width 6%

            [date-picker-wrapper]
                position absolute
                top 23px

            input + span + [date-picker-wrapper]
                margin-left 36px

        #category-filter
            .btn-group
                display block
                button, ul
                    width 100%
                button
                    float none

        #tags-filter
            .select2-search-choice
                background $color-green

        #search-filter
            margin-top 0
            &:hover
                .btn
                    border-color $color-green

            .btn
                height 35px
                background-color white
                border-color $color-grey
                color $color-grey

                .fui-search
                    top -1px

            input:focus
                border-right 0
                border-top-right-radius 0
                border-bottom-right-radius 0

    [date-picker] .active, [date-picker] .active.now
        background-color $color-green
        background-image none
        border none

    [date-picker] .now
        background-color $color-white
        color $color-black
        background-image none
        border 1px solid

    #my-vidatio-filter h2
        padding-top 3px

    .same-height
        display -webkit-box
        display -webkit-flex
        display -ms-flexbox
        display flex
        flex-wrap wrap

        & > [class*="col-"]
            display flex
            flex-direction column

        .no-vidatios
            display flex
            align-items center
            justify-content flex-start

            opacity 0.6
            background-image url(../images/logo-greyscale.svg)
            background-repeat no-repeat
            background-position center center
            background-size 15%

            p
                margin-top 25px
                max-width 50%


@media (max-width: 767px)
    #profile
    #catalog
        #filter
            margin-bottom 20px !important
            width calc(100% - 20vw)
            margin-left 10vw
            margin-right 10vw

        .vidatios
            margin-bottom 30px

            vidatio
                margin-left calc(10vw - 15px)
                margin-right calc(10vw - 15px)

                a.img
                    height 45vw

                img
                    height 42vw

@media (min-width: 768px) and (max-width: 991px)
    #profile
    #catalog
        #filter
            margin-bottom 20px !important
            width calc(100% - 30px)
            margin-left 15px
            margin-right 15px

        vidatio
            a.img
                height 28vw

            img
                height 27vw

@media screen and (max-width: 730px)
    #time-filter span.to
        display none

@media screen and (max-width: 991px)
    #catalog
        .vidatios > .row
            margin-left -15px
            margin-right -15px

        [id$="-filter"]
            max-width 30em
            margin 0 auto
            padding 0 15px !important
            .select2-container
                width 100%

        #search-filter
            width 100%

        .no-vidatios
            min-height 300px

        input + span + [date-picker-wrapper]
            right 0

@media(min-width: 992px)
    #catalog
        .row.content
            padding 0 15px

            .vidatios
                padding 0

                .row.cards
                    width 100%
                    padding 0
                    margin-left 15px
