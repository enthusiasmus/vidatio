#dataset-view.wrapper-content
    .row.dataset-title
        .col-sm-12
            h1.underline-red-light.dataset-title-text {{ information.title }}

    .row
        .col-sm-12
            .visualization-container
                img(src="{{ information.image }}")

            .row.buttons-first-row
                .col-xs-12.col-sm-4.middle
                    a#create-vidatio.btn.btn-primary(ui-sref="app.editor.id({ id: information.id, locale: locale })" ng-click="createVidatio()")
                        span.icon-edit.icons
                        span.button-text  {{ "CREATE_VIDATIO" | translate | uppercase }}

                .col-xs-12.col-sm-4.middle
                    #download-dataset
                        a.title.btn.btn-primary(href='#')
                            span.icon-download.icons
                            span.button-text  {{ "DOWNLOAD" | translate | uppercase }}

                        ul
                            li(ui-sref="app.editor.id({ id: information.id, locale: locale })" ng-click="downloadDataset()")
                                a
                                    span.icon-downloaddataset
                                    span  {{ "DATASET" | translate }}
                            li(ui-sref="app.editor.id({ id: information.id, locale: locale })" ng-click="downloadImage()")
                                a
                                    span.icon-downloadvisualization
                                    span  {{ "VISUALIZATION" | translate }}

                .col-xs-12.col-sm-4.middle
                    a#link-dataset.btn.btn-primary(href='#' ng-click="toggleVidatioLink()")
                        span.icon-link.icons
                        span.button-text  {{ "LINK" | translate | uppercase }}

                .col-xs-12
                    #vidatio-link-box(ng-show="$root.showVidatioLink")
                        p
                            span.icon-link.link-box-icon
                            span  {{ "LINK_TO_SHARE" | translate }}
                        a.fui-cross(href="#" ng-click="hideVidatioLink()")
                        form
                            input#vidatio-link.form-control(ng-model="link" onClick="this.select();")
                        a#copy-vidatio-link.btn.btn-primary(ng-click="copyVidatioLink()")
                            span.icon-copyclipboard.icons
                            span.button-text  {{"COPY_LINK" | translate | uppercase }}

    .row
        .col-sm-12
            h1.underline-red-light {{ "informationRMATION_DATASET" | translate | uppercase }}

    .row
        .col-sm-12
            .metadata-container
                .one-row
                    .description {{ information.description }}
                .one-row.space
                .one-row
                    .text {{ "DATASET_ORIGIN" | translate }}:
                    .dataset-creator {{ information.origin }}
                .one-row
                    .text {{ "DATASET_EDITOR" | translate }}:
                    .dataset-creator {{ information.creator }}
                .one-row.space
                .one-row
                    .text {{ "DATASET_ID" | translate }}:
                    .dataset-creator {{ information.id }}
                .one-row
                    .text {{ "DATASET_PARENT" | translate }}:
                    .dataset-creator {{ information.parent }}
                .one-row.space
                .one-row
                    .text {{ "DATASET_CREATED" | translate }}:
                    .dataset-created {{ information.created | date: "dd.MM.yyyy" }}
                .one-row
                    .text {{ "DATASET_UPDATED" | translate }}:
                    .dataset-update {{ information.updated | date: "dd.MM.yyyy" }}
                .one-row.space
                .one-row
                    .text {{ "CATEGORY" | translate }}:
                    .dataset-creator {{ information.category }}
                .one-row
                    .text {{ "DATASET_TAGS" | translate }}:
                    span.tag(ng-repeat="tag in information.tags track by $index") {{tag}}
