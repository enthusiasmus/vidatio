#dataset-view
    .dataset-title
        text-align center

    .visualization-container
        text-align center
        vertical-align middle
        width 100%
        height 450px
        line-height 350px
        background $color-white
        margin-top 20px
        box-shadow 2px 2px 2px 0px $color-shadow
        border-radius 4xp

        img
            width 100%
            height 50%
            opacity 0.4
            margin-top 65px

    .middle
        text-align center

    .buttons-first-row
        margin -23px -15px 50px -15px

        #edit-dataset
        #link-dataset
        #download-dataset
            width 170px
            height 45px
            line-height 25px

        #download-dataset
            position relative
            cursor pointer
            margin 0 auto
            text-align left

            a.title
                color $color-black
                background $color-white
                border 2px solid $color-green
                width 170px
                height 45px
                line-height 23px

                &:focus
                    background $color-hover-light
                    border-color $color-hover-light

            & > a
                display block
                width 170px

            ul
                background $color-white none repeat scroll 0 0
                border 2px solid $color-green
                display none
                position absolute
                width 170px
                list-style outside none none
                padding 0
                margin-top 12px
                border-radius 4px
                z-index 300

                &::after
                    border-color transparent transparent $color-white transparent
                    border-style solid
                    border-width 10px
                    content ""
                    left 73px
                    position absolute
                    top -20px
                    z-index 1000

                li
                    display block
                    position relative
                    z-index 301

                    &:first-child
                        border-bottom 2px solid $color-green

                        &::before
                            border-color transparent
                            border-style solid
                            border-width 11px
                            content ""
                            left -2px
                            position absolute
                            top -20px
                            z-index 1001
                            width 150px

                        &::after
                            border-color transparent transparent $color-green transparent
                            border-style solid
                            border-width 11px
                            content ""
                            left 72px
                            position absolute
                            top -24px
                            z-index 1001

                    & > a
                        color $color-black
                        position relative
                        text-decoration none
                        white-space nowrap
                        z-index 302
                        line-height 30px
                        font-size 16px
                        font-weight 500
                        margin-left 25px

                        i
                            margin-top 10px

                    &:hover
                        & > a
                            color $color-green

            &:hover
                a.title
                    background $color-hover-light
                    border-color $color-hover-light

                & > ul
                    display block

                & > a
                    background-color $color-hover-dark

    a.button
        width 132px

    #vidatio-link-overlay
        position relative
        top 25px
        box-shadow $box-shadow-size $color-shadow
        background $color-white
        border-top 3px solid $color-green
        padding 10px 20px 20px 20px
        text-align right
        height 105px

        .link-icon-overlay
            font-size 14px
            text-align left

        p
            float left
            margin 0

        .fui-cross
            background $color-white
            color $color-grey-dark
            text-align right
            &:hover
                color $color-red

        .form-control
            border-color $color-input-border-inactive
            width calc(100% - 160px)
            border-bottom-right-radius 0
            border-top-right-radius 0

            &:hover
            &:focus
                border-color $color-green

        #copy-vidatio-link
            border 2px solid $color-green
            top -42px
            position relative
            height 42px
            background $color-green
            line-height 18px

            &:active
                background-color $color-active
                border-color $color-active

            &:hover
            &:focus
                background-color $color-hover-dark
                border-color $color-hover-dark

    .metadata-container
        margin-bottom 20px

        .space
            margin 15px 0

        .one-row
            display flex
            flex-direction row

            .description
                margin 20px 0

            .text
                font-weight bold
                width 250px

@media (max-width: 435px)
    #dataset-view
        .buttons-first-row
            #link-dataset
                margin-left -6px
            #download-dataset
                margin-left -12px

@media (max-width: 767px)
    #dataset-view
        .buttons-first-row
            #edit-dataset
            #download-dataset
            #link-dataset
                width 117px
                font-size 12px
                line-height 26px

            #edit-dataset
                .fa
                    margin-left -9px

            #download-dataset
                a.title
                    width 117px
                    font-size 11px

                    span.download
                        &::before
                            margin-left -10px
                            background-size 13px
                            margin-top 3px

                ul
                    width 117px

                    &::after
                        left 45px
                        top -19px

                    li
                        &:first-child
                            &::after
                                left 44px
                                top -23px

                        & > a
                            margin-left 10px
                            font-size 13px

        .dataset-title-text
            margin-top 30px

        .metadata-container
            margin-bottom 100px

@media (min-width: 768px) and (max-width: 1012px)
    #dataset-view
        .dataset-title-text
            margin-left 30px
